<html t:type="border/layout" userObject="model" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">

<h1>${model.name}</h1>

<t:actionlink t:id="editGroup" context="model.id">Edit</t:actionlink>
<t:actionlink t:id="deleteGroup" context="model.id">Delete</t:actionlink>

<t:grid source="groupMembers" row="currentUser" exclude="id, name, enabled">
    <t:parameter name="usernamecell">
        <t:if test="currentUser">
            <a t:type="links/SelectObjectLink" model="currentUser">${currentUser.userDetails.username}</a>
        </t:if>
    </t:parameter>

</t:grid>

</html>