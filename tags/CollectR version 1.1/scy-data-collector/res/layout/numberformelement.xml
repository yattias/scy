<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent"
	android:orientation="horizontal" android:background="@drawable/gradient"
	android:paddingRight="3dp" android:paddingTop="3dp">
	<TextView android:id="@+id/numberformelement_label" android:paddingLeft="3dp"
		android:layout_gravity="center_vertical" android:text="Counter"
		android:layout_height="wrap_content" android:layout_width="wrap_content" />
	<EditText android:text="0" android:id="@+id/numberformelement_number_field"
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:layout_weight="2"></EditText>
	<Button android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@android:string/ok"
		android:id="@+id/numberformelement_okay" android:layout_gravity="center_vertical"></Button>
	<ImageButton android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:src="@drawable/ic_menu_info_details"
		android:id="@+id/numberformelement_show_details"
		android:layout_gravity="center_vertical"></ImageButton>
</LinearLayout>
