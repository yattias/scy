<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="info.collide.android.scydatacollector" android:versionName="1.1" android:versionCode="2">
	<application android:label="@string/app_name"
		android:theme="@android:style/Theme.Light"
		android:icon="@drawable/ic_launcher">
		<activity android:label="@string/app_name" android:name=".DataCollectorActivity" android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".DataCollectorFormActivity" android:windowSoftInputMode="stateHidden" android:screenOrientation="portrait"/>
		<activity android:name=".DataCollectorTakeTextActivity" android:screenOrientation="portrait"/>
		<activity android:name=".DataCollectorShowImageActivity" android:screenOrientation="portrait"/>
		<activity android:name=".DataCollectorConfigurationActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden"/>
		<activity android:name=".DataCollectorMapViewActivity" android:screenOrientation="portrait"/>
		<activity android:name=".DataCollectorFormOverviewActivity" android:screenOrientation="portrait"/>
		<activity android:name=".DataCollectorFormViewDetailsActivity" android:screenOrientation="portrait"/>
		<activity android:name=".DownloadFormsOverviewActivity" android:screenOrientation="portrait"/>
		<uses-library android:name="com.google.android.maps" />
		<provider android:name="DataCollectorContentProvider"
			android:authorities="info.collide.android.scydatacollector.DataCollectorProvider.Forms" />
	</application>
	<uses-sdk android:minSdkVersion="4" />
	<uses-permission android:name="android.permission.RECORD_AUDIO"></uses-permission>
	<uses-permission android:name="android.permission.VIBRATE"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>
	<uses-permission xmlns:android="http://schemas.android.com/apk/res/android"
		android:name="android.permission.INTERNET">
	</uses-permission>
	<uses-permission xmlns:android="http://schemas.android.com/apk/res/android"
		android:name="android.permission.ACCESS_COARSE_LOCATION">
	</uses-permission>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
</manifest>