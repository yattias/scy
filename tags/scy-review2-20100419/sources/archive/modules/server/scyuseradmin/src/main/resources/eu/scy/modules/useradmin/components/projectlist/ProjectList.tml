<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
    <t:grid source="projects" row="project" add="numberOfGroups, numberOfUsers, edit">
        <t:parameter name="namecell">
            <t:actionLink page="projectmanagement/ProjectManagement" t:id="selectProject" context="project.id">${project.name}</t:actionLink>
        </t:parameter>
        <t:parameter name="numberOfGroupscell">
            ${numberOfGroups}
        </t:parameter>
        <t:parameter name="numberOfUsersCell">
            ${numberOfUsers}
        </t:parameter>
        <t:parameter name="editcell">
            <t:pagelink page="projectmanagement/EditProject" context="project.id">
                <img src="${asset:context:graphics/pencil.png}" alt="Edit" style="border:0;"/>
            </t:pagelink>
        </t:parameter>
    </t:grid>
</html>