<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 5.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_5_2_0.dtd">

<service-builder package-path="com.ext.portlet.cart">
	<namespace>Carts</namespace>
	<entity name="CartEntry" local-service="true" remote-service="true">

		<!-- PK fields -->

		<column name="cartEntryId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="resourceId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="tagNames" type="String"/>
		<column name="resourceType" type="String"/>

		<!-- Relationships -->

		<column name="entries" type="Collection" entity="Cart" mapping-table="Cart_CartEntries" />

		<!-- Order -->

		<order by="asc">
			<order-column name="cartEntryId" />
		</order>

		<!-- Finder methods -->

		<finder name="TagNames" return-type="Collection">
			<finder-column name="tagNames" />
		</finder>
		<finder name="ResourceType" return-type="Collection">
			<finder-column name="resourceType" />
		</finder>
		<finder name="ResourceId" return-type="Collection">
			<finder-column name="resourceId" />
		</finder>

		<!-- References -->
		
		<reference package-path="com.liferay.portal" entity="User" />
		
	</entity>	
	<entity name="Cart" local-service="true" remote-service="true">

		<!-- PK fields -->

		<column name="cartId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="title" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="tagNames" type="String"/>

		<!-- Relationships -->

		<column name="cartentries" type="Collection" entity="CartEntry" mapping-table="Cart_CartEntries" />

		<!-- Finder methods -->

		<finder name="CompanyId" return-type="Collection">
			<finder-column name="companyId" />
		</finder>

		<!-- References -->

		<reference package-path="com.liferay.portal" entity="Group" />
		<reference package-path="com.liferay.portal" entity="User" />

	</entity>
    	<exceptions>
		<exception>NoSuchCartException</exception>
		<exception>NoSuchCartEntryException</exception>
	</exceptions>
</service-builder>