<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<!DOCTYPE page SYSTEM "chrome://highlighter/locale/highlighter.dtd">
<page id="sbSidebar" title="&sidebar.title;" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
    <script src="sidebar.js"/>

    <vbox id="sidebarvbox">

        <!-- Toolbar -->
        <toolbox>
            <toolbar id="scy-toolbar">
                <toolbarbutton id="newButton"  accesskey="N" class="toolbarbutton-1" tooltiptext="&toolbarbutton.tooltip.new;" oncommand="highlighter.newELO();" image="chrome://highlighter/skin/icons/new_x32.png"/>
                <toolbarbutton id="saveButton" accesskey="s"  class="toolbarbutton-1" tooltiptext="&toolbarbutton.tooltip.save;" oncommand="highlighter.saveELO();" image="chrome://highlighter/skin/icons/save_x32.png"/>
                <toolbarbutton id="previewButton" class="toolbarbutton-1" tooltiptext="&toolbarbutton.tooltip.preview;" oncommand="highlighter.preview();" image="chrome://highlighter/skin/icons/preview_x32.png"/>
                <toolbarbutton id="printButton"  class="toolbarbutton-1" tooltiptext="&toolbarbutton.tooltip.print;" oncommand="highlighter.print();" image="chrome://highlighter/skin/icons/print_x32.png"/>
                <toolbarbutton id="preferencesButton" class="toolbarbutton-1" tooltiptext="&toolbarbutton.tooltip.preferences;" oncommand="highlighter.openPreferences();" image="chrome://highlighter/skin/icons/preferences_x32.png"/>
                <toolbarbutton id="helpButton" class="toolbarbutton-1" tooltiptext="&toolbarbutton.tooltip.help;" oncommand="highlighter.openHelp();" image="chrome://highlighter/skin/icons/help_x32.png"/>
            </toolbar>
        </toolbox>

        <!--Title-->
        <label id="titleLabel" value="&highlighter.title;"/>
        <textbox id="titleBox" multiline="false" value="&highlighter.addTitle;" />

        <!--Selection-->
        <label id="selectionLabel" value="&highlighter.selection;"/>
        <listbox id="summaryBox" rows ="10" flex="0" seltype="multiple">

        </listbox>

        <!--Delete-Button-->
        <button label="&highlighter.deleteSelected;" oncommand="highlighter.deleteSelection();"/>

        <!--Comments-->
        <label id="commentsLabel" value="&highlighter.comments;"/>
        <textbox id="commentBox" multiline="true" value="&highlighter.addComments;" rows ="7" />

        <!--Sources-->
        <label control="{buddy control id}" value="&highlighter.sources;"/>

        <textbox id="urlBox" multiline="true" value="" rows ="6" readonly="true"/>

        <!--<button label="&highlighter.preview;" oncommand="highlighter.preview();"/>-->
        <hbox>
            <!--<button label="&highlighter.openELO;" oncommand="highlighter.openELO();"/>-->
            <button label="&highlighter.preview;" oncommand="highlighter.preview();"/>
            <button label="&highlighter.saveELO;" oncommand="highlighter.saveELO();"/>
        </hbox>
        <spacer flex="5"/>
        <spacer flex="5"/>
        <spacer flex="5"/>
        <spacer flex="5"/>
    </vbox>


</page>
