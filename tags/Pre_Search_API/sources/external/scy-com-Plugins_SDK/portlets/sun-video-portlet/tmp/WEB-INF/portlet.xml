<?xml version="1.0" encoding="UTF-8"?>
<portlet-app
    xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd /opt/SUNWportal/dtd/portlet.xsd"
    version="1.0">
    
    <portlet>
        <portlet-name>Youtube Portlet</portlet-name>
        <portlet-class>com.sun.portal.videoportlet.YoutubePortlet</portlet-class>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
            <portlet-mode>EDIT</portlet-mode>
            <portlet-mode>HELP</portlet-mode>
        </supports>
        <portlet-info>
            <title>Youtube Portlet</title>
        </portlet-info>
        <init-param>
         <description>Developer ID used to connect to Youtube Service</description>
         <name>developerID</name>
         <value>[developer_ID]</value>
        </init-param>
    </portlet>
    
    <portlet>
        <portlet-name>SingleVideoPortlet</portlet-name>
        <portlet-class>com.sun.portal.videoportlet.SingleVideoPortlet</portlet-class>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
        </supports>
        <portlet-info>
            <title>SingleVideoPortlet</title>
        </portlet-info>
        <init-param>
         <description></description>
         <name>videoID</name>
         <value>imauSAHvehU</value>
        </init-param>        
    </portlet>
</portlet-app>
