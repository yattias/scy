
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd ">

   <parent>
      <artifactId>parent</artifactId>
      <groupId>eu.scy.client.desktop</groupId>
      <version>9.8.0-SNAPSHOT</version>
   </parent>

   <modelVersion>4.0.0</modelVersion>
   <artifactId>scy-desktop</artifactId>
   <name>scy-desktop</name>
   <packaging>jar</packaging>

   <licenses>
      <license>
         <name>lgpl</name>
      </license>
   </licenses>

   <dependencies>

		<dependency>
			<groupId>info.collide</groupId>
			<artifactId>javafx-deps</artifactId>
			<version>1.2.3</version>
			<type>pom</type>
			<scope>provided</scope>
		</dependency>

		<dependency>
         <groupId>log4j</groupId>
         <artifactId>log4j</artifactId>
         <version>1.2.15</version>
      </dependency>

      <dependency>
         <groupId>org.jdom</groupId>
         <artifactId>jdom</artifactId>
      </dependency>

      <dependency>
         <groupId>net.java.dev.swing-layout</groupId>
         <artifactId>swing-layout</artifactId>
         <version>1.0.2</version>
      </dependency>

      <dependency>
         <groupId>org.roolo</groupId>
         <artifactId>elo-api</artifactId>
         <version>0.6.0-SNAPSHOT</version>
      </dependency>

      <dependency>
         <groupId>org.roolo</groupId>
         <artifactId>roolo-api</artifactId>
         <version>0.6.0-SNAPSHOT</version>
      </dependency>

      <dependency>
         <groupId>org.roolo</groupId>
         <artifactId>roolo-mock</artifactId>
         <version>0.6.0-SNAPSHOT</version>
      </dependency>

      <dependency>
         <groupId>org.roolo</groupId>
         <artifactId>roolo-cache</artifactId>
         <version>0.6.0-SNAPSHOT</version>
      </dependency>

      <dependency>
         <groupId>org.springframework</groupId>
         <artifactId>spring-context</artifactId>
         <version>2.5.6.SEC01</version>
         <type>jar</type>
         <scope>compile</scope>
      </dependency>
      <!--
      <dependency>
         <groupId>org.jfxtras</groupId>
         <artifactId>jfxtras-common</artifactId>
         <version>0.6-preview</version>
         <classifier>preview</classifier>
      </dependency>

      <dependency>
         <groupId>org.jfxtras</groupId>
         <artifactId>jfxtras-controls</artifactId>
         <version>0.6-preview</version>
         <classifier>preview</classifier>
      </dependency>
-->
      <dependency>
         <groupId>eu.scy.common</groupId>
         <artifactId>tool-broker-api</artifactId>
         <version>${pom.version}</version>
      </dependency>

      <dependency>
         <groupId>eu.scy.client.desktop</groupId>
         <artifactId>tool-broker</artifactId>
         <version>${pom.version}</version>
      </dependency>

      <dependency>
         <groupId>javax</groupId>
         <artifactId>jnlp</artifactId>
         <version>0.1</version>
      </dependency>

      <dependency>
         <groupId>eu.scy.common</groupId>
         <artifactId>configuration</artifactId>
         <version>${pom.version}</version>
      </dependency>

      <dependency>
         <groupId>eu.scy.client.client-common</groupId>
         <artifactId>scy-i18n</artifactId>
         <version>${pom.version}</version>
      </dependency>    </dependencies>

   <build>
      <resources>
         <resource>
            <directory>src/main/resources</directory>
         </resource>
         <!--
         <resource>
            <targetPath>config</targetPath>
            <directory>src/main/java/config</directory>
         </resource>
          -->
         <resource>
            <directory>src/main/java</directory>
            <includes>
               <include>**/*</include>
            </includes>
         </resource>
      </resources>

      <plugins>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <configuration>
               <source>1.6</source>
               <target>1.6</target>
               <optimize>true</optimize>
            </configuration>
         </plugin>
         <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
               <execution>
                  <phase>compile</phase>
                  <configuration>
                     <tasks>
                        <echo>Compiling JavaFX test sources</echo>
                        <taskdef classname="com.sun.tools.javafx.ant.JavaFxAntTask" classpathref="maven.compile.classpath" name="javafxc"/>
                        <mkdir dir="target/classes"/>
                        <javafxc debug="true" destdir="target/classes" compilerclasspathref="maven.compile.classpath">
                           <src path="src/main/java"/>
                           <classpath refid="maven.compile.classpath"/>
                        </javafxc>
                     </tasks>
                  </configuration>
                  <goals>
                     <goal>run</goal>
                  </goals>
               </execution>
            </executions>
         </plugin>
      </plugins>
   </build>
</project>
