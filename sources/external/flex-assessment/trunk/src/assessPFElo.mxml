<?xml version="1.0" encoding="utf-8"?>
<s:NavigatorContent xmlns:fx="http://ns.adobe.com/mxml/2009" 
					xmlns:s="library://ns.adobe.com/flex/spark" 
					xmlns:mx="library://ns.adobe.com/flex/mx" width="200" height="230">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			
			[Bindable] public var type:String;
			[Bindable] public var eloid:String;
			[Bindable] public var eloName:String;
			[Bindable] public var thumbnail:String;
			[Bindable] public var myname:String;
			[Bindable] public var createdby:String;
			[Bindable] public var modified:String;
			[Bindable] public var description:String;
			[Bindable] public var glg:ArrayCollection;
			[Bindable] public var slg:ArrayCollection;
			[Bindable] public var reflection:String;
			[Bindable] public var hasBeenSelectedForSubmit:Boolean = false;
			[Bindable] public var hasBeenReflectedOn:Boolean = false;
			[Bindable] public var eloIndex:Number;
			[Bindable] public var percentInquiry:String;
			[Bindable] public var inquiryPic:String;
			[Bindable] public var score:String;
			[Bindable] public var refComment:String;
		]]>
	</fx:Script>
	
	<s:BorderContainer width="100%" height="100%" backgroundColor="{index.THEME_COL}" buttonMode="true" dropShadowVisible="true">
		<s:VGroup id="box" top="5" left="5" right="5" bottom="5" gap="5">
			<s:Image source="{thumbnail}" width="100" height="100"/>
			<s:TextArea width="{box.width}" height="{box.height - 100 - scoreLab.height - 10}" editable="false" text="{resourceManager.getString('resources', 'TEACHER_COMMENT')+':\n '+refComment}" contentBackgroundAlpha="0" color="#FFFFFF" chromeColor="{index.THEME_COL}"/>
			<s:Label id="scoreLab" left="5" right="5" bottom="5" height="15" color="#FFFFFF" text="{resourceManager.getString('resources', 'SCORE')+': '+score}"/>
		</s:VGroup>
	</s:BorderContainer>
</s:NavigatorContent>
