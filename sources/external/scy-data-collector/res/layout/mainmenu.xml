<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<ImageView android:src="@drawable/logo"
		android:scaleType="fitXY" android:id="@+id/AndroidLogo"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:layout_height="100dp" android:layout_width="95dp" android:layout_margin="15px"></ImageView>
	<ImageView android:src="@drawable/scy_logo"
		android:scaleType="fitXY" android:id="@+id/SCYLogo"
		android:layout_toRightOf="@+id/AndroidLogo"
		android:layout_alignBaseline="@+id/AndroidLogo" android:layout_height="100dp"
		android:layout_marginRight="10dp" android:layout_marginTop="20dp" android:layout_width="220dp" android:layout_marginLeft="10dp"></ImageView>
	<!-- form selection option -->
	<ImageView android:layout_below="@id/SCYLogo"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:id="@+id/FormsIcon" android:src="@drawable/formsicon"
		android:layout_marginTop="30dp" android:layout_marginLeft="20dp"
		android:layout_marginRight="10dp"></ImageView>
	<TextView android:id="@+id/SelectFormTitle"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="Select Forms" android:textSize="24dp"
		android:layout_toRightOf="@+id/FormsIcon" android:layout_alignTop="@+id/FormsIcon"></TextView>
	<TextView android:layout_below="@id/SelectFormTitle"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:id="@+id/SelectFormText"
		android:text="Browse and open downloaded forms, upload results and delete old ones."
		android:layout_toRightOf="@+id/FormsIcon" android:textSize="12dp"></TextView>
	<!-- form synchronization option -->
	<ImageView android:layout_below="@id/FormsIcon"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:id="@+id/SyncIcon" android:layout_marginTop="30dp" android:layout_marginLeft="20dp"
		android:layout_marginRight="10dp" android:src="@drawable/syncicon"></ImageView>
	<TextView android:id="@+id/SyncFormTitle"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="Download Forms" android:textSize="24dp"
		android:layout_toRightOf="@+id/SyncIcon" android:layout_alignTop="@+id/SyncIcon"></TextView>
	<TextView android:layout_below="@id/SyncFormTitle"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:id="@+id/SyncFormText"
		android:text="Browse and open downloaded forms, upload results and delete old ones."
		android:layout_toRightOf="@+id/SyncIcon" android:textSize="12dp"></TextView>
	<!-- configuration option -->
	<ImageView android:layout_below="@id/SyncIcon"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:id="@+id/PreferencesIcon" android:layout_marginTop="30dp" android:layout_marginLeft="20dp"
		android:layout_marginRight="10dp" android:src="@drawable/prefsicon"></ImageView>
	<TextView android:id="@+id/PreferencesTitle"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="Configuration" android:textSize="24dp"
		android:layout_toRightOf="@+id/PreferencesIcon" android:layout_alignTop="@+id/PreferencesIcon"></TextView>
	<TextView android:layout_below="@id/PreferencesTitle"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:id="@+id/PreferencesText"
		android:text="Browse and open downloaded forms, upload results and delete old ones."
		android:layout_toRightOf="@+id/PreferencesIcon" android:textSize="12dp"></TextView>
</RelativeLayout>
