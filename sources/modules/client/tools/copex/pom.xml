<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<artifactId>parent</artifactId>
		<groupId>eu.scy.client.tools</groupId>
		<version>34-bgtrials-SNAPSHOT</version>
	</parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>copex</artifactId>
    <packaging>jar</packaging>
    <name>Copex</name>

    <developers>
		<developer>
			<id>marjolaine</id>
			<name>Marjolaine Bodin</name>
			<email>marjolaine.bodin@imag.fr</email>
			<url>www.liglab.fr</url>
			<organization>Joseph Fourier University</organization>
			<organizationUrl>www.ujf-grenoble.fr</organizationUrl>
			<roles>
				<role>developer</role>
			</roles>
			<timezone>+1</timezone>
		</developer>
	</developers>

    
	<dependencies>
        <dependency>
            <groupId>org.jdom</groupId>
            <artifactId>jdom</artifactId>
        </dependency>
        <dependency>
            <groupId>com.lowagie</groupId>
            <artifactId>itext</artifactId>
            <version>2.1.4</version>
            <exclusions>
                <exclusion>
                    <artifactId>bcprov-jdk14</artifactId>
                    <groupId>bouncycastle</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>bcmail-jdk14</artifactId>
                    <groupId>bouncycastle</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>eu.scy.client.client-common</groupId>
            <artifactId>scy-i18n</artifactId>
            <version>${pom.version}</version>
        </dependency>
        <dependency>
            <groupId>eu.scy.client.tools</groupId>
            <artifactId>drawingtool</artifactId>
            <version>${pom.version}</version>
        </dependency>
		<dependency>
            <groupId>org.roolo</groupId>
            <artifactId>elo-impl</artifactId>
            <version>35-SNAPSHOT</version>
		</dependency>
    </dependencies>
    
    <build>
        <plugins>
            
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                           <!--<mainClass>eu.scy.tools.copex.edp.CopexApplet</mainClass> -->
                           <mainClass>eu.scy.client.tools.copex.edp.EdPFrame</mainClass>
                            <classpathPrefix>lib/</classpathPrefix>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
           
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/resources/</directory>
            </resource>
        </resources>
    </build>
    
</project>
