<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<artifactId>parent</artifactId>
		<groupId>eu.scy.client.tools</groupId>
		<version>9.5.2-SNAPSHOT</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<artifactId>scymapper</artifactId>
	<packaging>jar</packaging>
	<name>SCYMapper concept mapping tool</name>

	<dependencies>
		<!-- SCY -->
		<dependency>
			<groupId>eu.scy.common</groupId>
			<artifactId>scy-model-api</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>eu.scy.common</groupId>
			<artifactId>scy-model-impl</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>eu.scy.common</groupId>
			<artifactId>tool-broker-api</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>eu.scy.common</groupId>
			<artifactId>scy-commons</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>eu.scy.common</groupId>
			<artifactId>collaboration-service-api</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>eu.scy.common</groupId>
			<artifactId>collaboration-service-impl</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>colemo-model</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>eu.scy.client.desktop</groupId>
			<artifactId>tool-broker</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<!-- ROOLO -->
		<dependency>
			<groupId>org.roolo</groupId>
			<artifactId>roolo-mock</artifactId>
			<version>0.4.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.roolo</groupId>
			<artifactId>elo-api</artifactId>
			<version>0.4.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.roolo</groupId>
			<artifactId>elo-impl</artifactId>
			<version>0.4.0-SNAPSHOT</version>
		</dependency>
		<!-- SQL SPACES -->
		<dependency>
			<groupId>info.collide</groupId>
			<artifactId>sqlspaces-client</artifactId>
			<version>3.1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>info.collide</groupId>
			<artifactId>sqlspaces-commons</artifactId>
			<version>3.1.0-SNAPSHOT</version>
		</dependency>
		<!-- JGROUPS -->
		<dependency>
			<groupId>jgroups</groupId>
			<artifactId>jgroups-all</artifactId>
			<version>2.2.9.1</version>
		</dependency>
		<dependency>
			<groupId>concurrent</groupId>
			<artifactId>concurrent</artifactId>
			<version>1.3.3</version>
		</dependency>
		<!-- SAIL STUFF -->
		<dependency>
			<groupId>net.sf.sail</groupId>
			<artifactId>sail-webapp-all</artifactId>
			<version>0.1.0-SNAPSHOT</version>
			<exclusions>
				<exclusion>
					<artifactId>elo-api</artifactId>
					<groupId>elo-api</groupId>
				</exclusion>
				<exclusion>
					<artifactId>elo-impl</artifactId>
					<groupId>elo-impl</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>net.sf.sail</groupId>
			<artifactId>sail-data-emf</artifactId>
			<version>0.1.0-SNAPSHOT</version>
			<exclusions>
				<exclusion>
					<artifactId>elo-api</artifactId>
					<groupId>elo-api</groupId>
				</exclusion>
				<exclusion>
					<artifactId>elo-impl</artifactId>
					<groupId>elo-impl</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.concord</groupId>
			<artifactId>apple-support</artifactId>
			<version>0.1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.concord</groupId>
			<artifactId>swing</artifactId>
			<version>0.1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
		</dependency>
		<dependency>
			<groupId>dom4j</groupId>
			<artifactId>dom4j</artifactId>
			<version>1.6</version>
		</dependency>
		<dependency>
			<groupId>org.swinglabs</groupId>
			<artifactId>swingx</artifactId>
			<version>0.9.1</version>
		</dependency>
        <dependency>
            <groupId>org.apache.xmlgraphics</groupId>
            <artifactId>batik-bridge</artifactId>
            <version>1.7</version>
        </dependency>
        <dependency>
            <groupId>org.apache.xmlgraphics</groupId>
            <artifactId>batik-svg-dom</artifactId>
            <version>1.7</version>
        </dependency>
        <dependency>
            <groupId>org.apache.xmlgraphics</groupId>
            <artifactId>batik-gvt</artifactId>
            <version>1.7</version>
        </dependency>
	</dependencies>
        <repositories>
                <repository>
                        <id>snapshots-tels</id>
                        <url>http://repo.telscenter.org/internal_snapshot</url>
                </repository>
                <repository>
                        <id>releases-tels</id>
                        <url>http://repo.telscenter.org/internal</url>
                </repository>
        </repositories>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<executions>
					<execution></execution>
				</executions>
				<configuration>
					<mainClass>eu.scy.colemo.client.ColemoStartup</mainClass>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<optimize>true</optimize>
				</configuration>
			</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>src/main/java</directory>
				<targetPath>*.*</targetPath>
				<includes>
					<include>*.gif</include>
					<include>*.png</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/*.*</include>
				</includes>
			</resource>
		</resources>
	</build>
	<dependencyManagement>
		<dependencies>
		</dependencies>
	</dependencyManagement>

</project>
