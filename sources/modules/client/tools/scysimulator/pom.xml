<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<artifactId>parent</artifactId>
		<groupId>eu.scy.client.tools</groupId>
		<version>34-SNAPSHOT</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<artifactId>scysimulator</artifactId>
	<packaging>jar</packaging>
	<name>SCYSimulator simulation tool</name>

	<developers>
		<developer>
			<id>lars</id>
			<name>Lars Bollen</name>
			<email>larsbollen@gmail.com</email>
			<url>www.utwente.nl</url>
			<organization>University of Twende</organization>
			<organizationUrl>www.utwente.nl</organizationUrl>
			<roles>
				<role>developer</role>
			</roles>
			<timezone>+1</timezone>
		</developer>
	</developers>

	<dependencies>
		<!-- SCY -->
		<dependency>
			<groupId>eu.scy.common</groupId>
			<artifactId>action-logging-api</artifactId>
			<version>${pom.version}</version>
		</dependency>

		<dependency>
			<groupId>eu.scy.client.client-common</groupId>
			<artifactId>scy-i18n</artifactId>
			<version>${pom.version}</version>
			<exclusions>
				<exclusion>
					<artifactId>jmxtools</artifactId>
					<groupId>com.sun.jdmk</groupId>
				</exclusion>
				<exclusion>
					<artifactId>log4j</artifactId>
					<groupId>log4j</groupId>
				</exclusion>
			</exclusions>
		</dependency>

		<dependency>
			<groupId>eu.scy.client.tools</groupId>
			<artifactId>drawingtool</artifactId>
			<version>${pom.version}</version>
			<exclusions>
				<exclusion>
					<artifactId>jcrom</artifactId>
					<groupId>org.jcrom</groupId>
				</exclusion>
				<exclusion>
					<artifactId>appframework</artifactId>
					<groupId>org.jdesktop</groupId>
				</exclusion>
				<exclusion>
					<artifactId>commons-logging</artifactId>
					<groupId>commons-logging</groupId>
				</exclusion>
			</exclusions>
		</dependency>

		<dependency>
			<groupId>eu.scy.common</groupId>
			<artifactId>scy-commons</artifactId>
			<version>${pom.version}</version>
			<exclusions>
				<exclusion>
					<artifactId>spring-tx</artifactId>
					<groupId>org.springframework</groupId>
				</exclusion>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-dao</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-hibernate</artifactId>
				</exclusion>
				<exclusion>
					<artifactId>commons-logging</artifactId>
					<groupId>commons-logging</groupId>
				</exclusion>
			</exclusions>
		</dependency>

		<dependency>
			<groupId>eu.scy.client.desktop</groupId>
			<artifactId>tool-broker</artifactId>
			<version>${pom.version}</version>
			<exclusions>
				<exclusion>
					<artifactId>log4j</artifactId>
					<groupId>log4j</groupId>
				</exclusion>
				<exclusion>
					<artifactId>commons-logging</artifactId>
					<groupId>commons-logging</groupId>
				</exclusion>
			</exclusions>
		</dependency>

		<!-- OTHERS -->
		<dependency>
			<groupId>nl.utwente</groupId>
			<artifactId>simquestviewer</artifactId>
			<version>1.9.0</version>
		</dependency>

		<dependency>
			<groupId>jama</groupId>
			<artifactId>jama</artifactId>
			<version>1.0.2</version>
		</dependency>

		<dependency>
			<groupId>ptolemy</groupId>
			<artifactId>plot</artifactId>
			<version>1.0.0</version>
		</dependency>

		<dependency>
			<groupId>org.jdom</groupId>
			<artifactId>jdom</artifactId>
		</dependency>

		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
		</dependency>

		<dependency>
			<groupId>eu.scy.common</groupId>
			<artifactId>action-logging-commons</artifactId>
			<version>${pom.version}</version>
			<scope>compile</scope>
		</dependency>

	</dependencies>

	<build>
		<resources>
			<resource>
				<directory>src/main/java</directory>
				<includes>
					<include>**/*</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<mainClass>eu.scy.client.tools.scysimulator.SCYSimulatorStandalone</mainClass>
						</manifest>
					</archive>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
