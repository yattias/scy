
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd ">
 
    <parent>
        <artifactId>parent</artifactId>
        <groupId>eu.scy.client.desktop</groupId>
        <version>9.5.2-SNAPSHOT</version>
    </parent>
 
    <modelVersion>4.0.0</modelVersion>
    <artifactId>scy-desktop</artifactId>
    <name>scy-desktop</name>
    <packaging>jar</packaging>

    <licenses>
        <license>
            <name>lgpl</name>
        </license>
    </licenses>
 
    <dependencies>
        <dependency>
            <groupId>net.java.dev.openjfx</groupId>
            <artifactId>javafxrt</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>net.java.dev.openjfx</groupId>
            <artifactId>javafxc</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>net.java.dev.openjfx</groupId>
            <artifactId>toolchain</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>net.java.dev.openjfx</groupId>
            <artifactId>javafxgui</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>net.java.dev.openjfx</groupId>
            <artifactId>javafx-swing</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>net.java.dev.openjfx</groupId>
            <artifactId>Scenario</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>net.java.dev.openjfx</groupId>
            <artifactId>websvc</artifactId>
            <version>1.1</version>
        </dependency>

        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.14</version>
        </dependency>

         <dependency>
            <groupId>org.jdom</groupId>
            <artifactId>jdom</artifactId>
            <version>1.1</version>
         </dependency>

        <dependency>
            <groupId>org.roolo</groupId>
            <artifactId>elo-api</artifactId>
            <version>0.4.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>org.roolo</groupId>
            <artifactId>roolo-api</artifactId>
            <version>0.4.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>org.roolo</groupId>
            <artifactId>roolo-mock</artifactId>
            <version>0.4.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>info.collide</groupId>
            <artifactId>sqlspaces-client</artifactId>
            <version>3.1.0-SNAPSHOT</version>
        </dependency>

    </dependencies>

    <build>
        <resources>
            <resource>
                <targetPath>config</targetPath>
                <directory>src/main/java/config</directory>
            </resource>
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>client.properties</include>
                </includes>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <optimize>true</optimize>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <configuration>
                            <tasks>
                                <echo>Compiling JavaFX test sources</echo>
                                <taskdef classname="com.sun.tools.javafx.ant.JavaFxAntTask" classpathref="maven.compile.classpath" name="javafxc"/>
                                <mkdir dir="target/classes"/>
                                <javafxc destdir="target/classes" compilerclasspathref="maven.compile.classpath">
                                    <src path="src/main/java"/>
                                    <classpath refid="maven.compile.classpath"/>
                                </javafxc>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo.webstart</groupId>
                <artifactId>webstart-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>jnlp</goal> <!-- use jnlp, jnlp-inline or jnlp-single as appropriate -->
                        </goals>
                    </execution>
                </executions>
                <configuration>
           <!--outputDirectory></outputDirectory--> <!-- not required?? -->

           <!--
           Set to true to exclude all transitive dependencies. Default is false.
           -->
                    <excludeTransitive>false</excludeTransitive>

           <!-- The path where the libraries are stored within the jnlp structure. not required. by default the libraries are within the working directory -->
                    <!--<libPath>lib</libPath>-->

           <!-- JNLP generation -->
                    <jnlp>
             <!-- default values -->
             <!--inputTemplateResourcePath>${project.basedir}</inputTemplateResourcePath-->
                        <inputTemplate>src/main/jnlp/template.vm</inputTemplate> <!-- relative to inputTemplateResourcePath -->
                        <outputFile>scylab.jnlp</outputFile> <!-- defaults to launch.jnlp -->
             <!-- used to automatically identify the jar containing the main class. -->
             <!-- this is perhaps going to change -->
                        <mainClass>eu.scy.elobrowser.main.EloBrowser</mainClass>
                    </jnlp>

                    <sign>
                        <keypass>scylab</keypass>
                        <storepass>scylab</storepass>
                        <alias>scykeystore</alias>
                        <keystore>${project.build.directory}/../scykeystore.jks</keystore>
                        <verify>true</verify>
                        <keystoreConfig>
                            <delete>false</delete>
                            <gen>false</gen>
                        </keystoreConfig>

                    </sign>
                    <unsign>true</unsign>

           <!-- BUILDING PROCESS -->

                    <pack200>false</pack200>
                    <gzip>false</gzip> <!-- default force when pack200 false, true when pack200 selected ?? -->

           <!-- causes a version attribute to be output in each jar resource element, optional, default is false -->
                    <outputJarVersions>false</outputJarVersions>

           <!--install>false</install--> <!-- not yet supported -->
                    <verbose>false</verbose>

                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
