<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd ">

   <parent>
      <artifactId>parent</artifactId>
      <groupId>eu.scy.client.desktop</groupId>
      <version>9.8.0-SNAPSHOT</version>
   </parent>

   <modelVersion>4.0.0</modelVersion>
   <artifactId>scy-lab-webstart</artifactId>
   <name>scy-lab-webstart</name>
   <packaging>jar</packaging>

   <licenses>
      <license>
         <name>lgpl</name>
      </license>
   </licenses>

   <dependencies>

      <dependency>
         <groupId>info.collide</groupId>
         <artifactId>javafx-deps</artifactId>
         <version>1.2.3</version>
         <type>pom</type>
         <scope>provided</scope>
      </dependency>

      <dependency>
         <groupId>eu.scy.client.desktop</groupId>
         <artifactId>scy-desktop</artifactId>
         <version>${pom.version}</version>
      </dependency>

      <dependency>
         <groupId>eu.scy.client.tools</groupId>
         <artifactId>fx-drawingtool</artifactId>
         <version>${pom.version}</version>
      </dependency>

      <dependency>
         <groupId>eu.scy.client.tools</groupId>
         <artifactId>fx-scymapper</artifactId>
         <version>${pom.version}</version>
      </dependency>

      <dependency>
         <groupId>eu.scy.client.tools</groupId>
         <artifactId>fx-simulator</artifactId>
         <version>${pom.version}</version>
      </dependency>

      <dependency>
         <groupId>eu.scy.client.tools</groupId>
         <artifactId>fx-studentplanningtool</artifactId>
         <version>${pom.version}</version>
      </dependency>

      <dependency>
         <groupId>eu.scy.client.tools</groupId>
         <artifactId>fx-scydynamics</artifactId>
         <version>${pom.version}</version>
      </dependency>

      <dependency>
         <groupId>eu.scy.client.tools</groupId>
         <artifactId>fx-fitex</artifactId>
         <version>${pom.version}</version>
      </dependency>

      <dependency>
         <groupId>eu.scy.client.tools</groupId>
         <artifactId>fx-copex</artifactId>
         <version>${pom.version}</version>
      </dependency>

      <dependency>
         <groupId>eu.scy.client.tools</groupId>
         <artifactId>fx-flying-saucer</artifactId>
         <version>${pom.version}</version>
      </dependency>
      <dependency>
         <groupId>eu.scy.client.tools</groupId>
         <artifactId>fx-interviewtool</artifactId>
         <version>${pom.version}</version>
      </dependency>
      <dependency>
         <groupId>eu.scy.client.tools</groupId>
         <artifactId>fx-video</artifactId>
         <version>${pom.version}</version>
      </dependency>
      <dependency>
         <groupId>eu.scy.client.tools</groupId>
         <artifactId>fx-webresourcer</artifactId>
         <version>${pom.version}</version>
      </dependency>
      <dependency>
         <groupId>eu.scy.client.tools</groupId>
         <artifactId>fx-richtexteditor</artifactId>
         <version>${pom.version}</version>
      </dependency>
   </dependencies>

   <build>
      <resources>
         <resource>
            <targetPath>config</targetPath>
            <directory>src/main/java/config</directory>
         </resource>
         <resource>
            <directory>src/main/java</directory>
            <includes>
               <include>client.properties</include>
            </includes>
         </resource>
      </resources>

      <plugins>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <configuration>
               <source>1.6</source>
               <target>1.6</target>
               <optimize>true</optimize>
            </configuration>
         </plugin>
         <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
               <execution>
                  <phase>compile</phase>
                  <configuration>
                     <tasks>
                        <echo>Compiling JavaFX test sources</echo>
                        <taskdef classname="com.sun.tools.javafx.ant.JavaFxAntTask" classpathref="maven.compile.classpath" name="javafxc"/>
                        <mkdir dir="target/classes"/>
                        <javafxc debug="true" destdir="target/classes" compilerclasspathref="maven.compile.classpath">
                           <src path="src/main/java"/>
                           <classpath refid="maven.compile.classpath"/>
                        </javafxc>
                     </tasks>
                  </configuration>
                  <goals>
                     <goal>run</goal>
                  </goals>
               </execution>
            </executions>
         </plugin>
         <plugin>
            <groupId>org.codehaus.mojo.webstart</groupId>
            <artifactId>webstart-maven-plugin</artifactId>

            <executions>
               <execution>
                  <phase>package</phase>
                  <goals>
                     <goal>jnlp</goal>
                     <!-- use jnlp, jnlp-inline or jnlp-single as appropriate -->
                  </goals>
               </execution>
            </executions>
            <configuration>
               <!--outputDirectory></outputDirectory--> <!-- not required?? -->

                    <!--
                    Set to true to exclude all transitive dependencies. Default is false.
                    -->
               <excludeTransitive>false</excludeTransitive>

               <!-- The path where the libraries are stored within the jnlp structure. not required. by default the libraries are within the working directory -->
               <libPath>lib</libPath>

               <!-- JNLP generation -->
               <jnlp>
                  <!-- default values -->
                        <!--inputTemplateResourcePath>${project.basedir}</inputTemplateResourcePath-->
                  <inputTemplate>src/main/jnlp/template_filtered.vm</inputTemplate>
                  <!-- relative to inputTemplateResourcePath -->
                  <outputFile>scy-lab.jnlp</outputFile>
                  <!-- defaults to launch.jnlp -->
                        <!-- used to automatically identify the jar containing the main class. -->
                        <!-- this is perhaps going to change -->
                  <mainClass>eu.scy.client.desktop.scylab.Main</mainClass>
               </jnlp>

               <sign>
                  <keypass>scylab</keypass>
                  <storepass>scylab</storepass>
                  <alias>scykeystore</alias>
                  <keystore>${project.build.directory}/../scykeystore.jks</keystore>
                  <verify>true</verify>
                  <keystoreConfig>
                     <delete>false</delete>
                     <gen>false</gen>
                  </keystoreConfig>

               </sign>
               <unsign>false</unsign>

               <!-- BUILDING PROCESS -->

               <pack200>false</pack200>
               <gzip>false</gzip>
               <!-- default force when pack200 false, true when pack200 selected ?? -->

                    <!-- causes a version attribute to be output in each jar resource element, optional, default is false -->
               <outputJarVersions>false</outputJarVersions>

               <!--install>false</install--> <!-- not yet supported -->
               <verbose>false</verbose>

            </configuration>
         </plugin>

         <plugin>
            <artifactId>maven-resources-plugin</artifactId>
            <executions>
               <execution>
                  <id>move-scy-lab-jnlp</id>
                  <phase>process-classes</phase>
                  <goals>
                     <goal>copy-resources</goal>
                  </goals>
                  <configuration>
                     <outputDirectory>${basedir}/target/classes/scylab</outputDirectory>
                     <resources>
                        <resource>
                           <includes>
                              <include>**/*.jnlp</include>
                           </includes>
                           <directory>target/jnlp</directory>
                           <filtering>true</filtering>
                        </resource>
                     </resources>
                  </configuration>
               </execution>
               <execution>
                  <id>move-scy-lab-jars</id>
                  <phase>process-classes</phase>
                  <goals>
                     <goal>copy-resources</goal>
                  </goals>
                  <configuration>
                     <outputDirectory>${basedir}/target/classes/scylab</outputDirectory>
                     <resources>
                        <resource>
                           <includes>
                              <include>**/*.jar</include>
                           </includes>
                           <directory>target/jnlp</directory>
                           <filtering>false</filtering>
                        </resource>
                     </resources>
                  </configuration>
               </execution>
            </executions>
         </plugin>


      </plugins>


   </build>



</project>
