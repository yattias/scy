<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

   <!-- <import resource="localRooloConfig.xml"/> -->
   <!--<import resource="localRooloTemporaryConfig.xml"/>-->
   <!--<import resource="localWrappedRooloConfig.xml"/>-->
   <import resource="localWrappedRooloTemporaryConfig.xml"/>
   <!-- <import resource="remoteRooloConfig.xml"/> -->

   <bean name="eloFactory" class="roolo.elo.JDomBasicELOFactory">
      <constructor-arg index="0" ref="metadataTypeManager"/>
   </bean>

   <bean name="scyDesktopConfig" class="eu.scy.client.desktop.scydesktop.config.BasicConfig">
      <property name="repository" ref="repository"/>
      <property name="extensionManager" ref="extensionManager"/>
      <property name="metadataTypeManager" ref="metadataTypeManager"/>
      <property name="eloFactory" ref="eloFactory"/>
      <property name="titleKey" ref="titleKey"/>
      <property name="technicalFormatKey" ref="technicalFormatKey"/>

      <property name="eloConfigs">
         <list value-type="eu.scy.client.desktop.scydesktop.config.BasicEloConfig">
            <bean class="eu.scy.client.desktop.scydesktop.config.BasicEloConfig">
               <property name="type" value="scy/drawing"/>
               <property name="display" value="Drawing"/>
               <property name="creatable" value="true"/>
               <property name="contentCreatorId" value="drawing"/>
               <property name="bottomDrawerCreatorId" value="xmlViewer"/>
            </bean>
            <bean class="eu.scy.client.desktop.scydesktop.config.BasicEloConfig">
               <property name="type" value="scy/dataset"/>
               <property name="display" value="Data processing"/>
               <property name="creatable" value="true"/>
               <property name="contentCreatorId" value="fitex"/>
               <property name="bottomDrawerCreatorId" value="xmlViewer"/>
            </bean>
            <bean class="eu.scy.client.desktop.scydesktop.config.BasicEloConfig">
               <property name="type" value="scy/copex"/>
               <property name="display" value="Experimental procedure"/>
               <property name="creatable" value="true"/>
               <property name="contentCreatorId" value="copex"/>
               <property name="bottomDrawerCreatorId" value="xmlViewer"/>
            </bean>
            <bean class="eu.scy.client.desktop.scydesktop.config.BasicEloConfig">
               <property name="type" value="scy/simconfig"/>
               <property name="display" value="Simulator"/>
               <property name="creatable" value="true"/>
               <property name="contentCreatorId" value="simulator"/>
               <property name="bottomDrawerCreatorId" value="xmlViewer"/>
            </bean>
            <bean class="eu.scy.client.desktop.scydesktop.config.BasicEloConfig">
               <property name="type" value="scy/model"/>
               <property name="display" value="Model"/>
               <property name="creatable" value="true"/>
               <property name="contentCreatorId" value="scy-dynamics"/>
               <property name="bottomDrawerCreatorId" value="xmlViewer"/>
            </bean>
            <bean class="eu.scy.client.desktop.scydesktop.config.BasicEloConfig">
               <property name="type" value="scy/url"/>
               <property name="display" value="XHTML web page"/>
               <property name="creatable" value="true"/>
               <property name="contentCreatorId" value="flying-saucer"/>
               <property name="bottomDrawerCreatorId" value="xmlViewer"/>
            </bean>
			 <bean class="eu.scy.client.desktop.scydesktop.config.BasicEloConfig">
               <property name="type" value="scy/conceptmap"/>
               <property name="display" value="Concept Map"/>
               <property name="creatable" value="true"/>
               <property name="contentCreatorId" value="conceptmap"/>
               <property name="bottomDrawerCreatorId" value="xmlViewer"/>
            </bean>
         </list>
      </property>

      <property name="basicMissionAnchorConfigs">
         <list>
            <bean name="missionDescription" class="eu.scy.client.desktop.scydesktop.config.BasicMissionAnchorConfig">
               <property name="uri" value="roolo://memory/0/0/Mission_description.url"/>
               <property name="xPosition" value="0"/>
               <property name="yPosition" value="20"/>
               <property name="nextMissionAnchorConfigUris">
                  <list>
                     <value>roolo://memory/1/0/Mission_background.url</value>
                     <value>roolo://memory/2/0/Mission_simulation.scysimconfig</value>
                  </list>
               </property>
            </bean>
            <bean name="missionBackground" class="eu.scy.client.desktop.scydesktop.config.BasicMissionAnchorConfig">
               <property name="uri" value="roolo://memory/1/0/Mission_background.url"/>
               <property name="xPosition" value="40"/>
               <property name="yPosition" value="40"/>
               <property name="nextMissionAnchorConfigUris">
                  <list>
                     <value>roolo://memory/3/0/Mission_concepts.scydraw</value>
                     <value>roolo://memory/2/0/Mission_simulation.scysimconfig</value>
                  </list>
               </property>
            </bean>
            <bean name="simulation" class="eu.scy.client.desktop.scydesktop.config.BasicMissionAnchorConfig">
               <property name="uri" value="roolo://memory/2/0/Mission_simulation.scysimconfig"/>
               <property name="xPosition" value="40"/>
               <property name="yPosition" value="0"/>
               <property name="nextMissionAnchorConfigUris">
                  <list>
                     <value>roolo://memory/3/0/Mission_concepts.scydraw</value>
                  </list>
               </property>
            </bean>
            <bean name="concept" class="eu.scy.client.desktop.scydesktop.config.BasicMissionAnchorConfig">
               <property name="uri" value="roolo://memory/3/0/Mission_concepts.scydraw"/>
               <property name="xPosition" value="80"/>
               <property name="yPosition" value="20"/>
               <property name="nextMissionAnchorConfigUris">
                  <list>
                     <value>roolo://memory/4/0/Mission_report.text</value>
                  </list>
               </property>
            </bean>
            <bean name="report" class="eu.scy.client.desktop.scydesktop.config.BasicMissionAnchorConfig">
               <property name="uri" value="roolo://memory/4/0/Mission_report.text"/>
               <property name="xPosition" value="120"/>
               <property name="yPosition" value="20"/>
            </bean>
         </list>
      </property>

      <property name="activeMissionAnchorUri" value="roolo://memory/1/0/Mission_background.url"/>
   </bean>

</beans>
