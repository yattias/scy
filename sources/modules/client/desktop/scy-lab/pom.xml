	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<optimize>true</optimize>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>compile</phase>
						<configuration>
							<tasks>
								<echo>Compiling JavaFX sources</echo>
								<taskdef classname="com.sun.tools.javafx.ant.JavaFxAntTask" classpathref="maven.compile.classpath" name="javafxc" />
								<mkdir dir="target/classes" />
								<javafxc debug="true" destdir="target/classes" compilerclasspathref="maven.compile.classpath">
									<src path="src/main/java" />
									<classpath refid="maven.compile.classpath" />
								</javafxc>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>local</id>
			<build>
				<resources>
					<resource>
						<directory>src/main/java</directory>
						<includes>
							<include>**/*</include>
						</includes>
					</resource>
				</resources>
			</build>
		</profile>
		<profile>
			<id>webstart</id>
			<build>
				<resources>
					<resource>
						<targetPath>config</targetPath>
						<directory>src/main/java/config</directory>
					</resource>
					<resource>
						<directory>src/main/java</directory>
						<includes>
							<include>client.properties</include>
						</includes>
					</resource>
				</resources>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>build-helper-maven-plugin</artifactId>
						<version>1.3</version>
						<executions>
							<execution>
								<id>attach-artifacts</id>
								<phase>package</phase>
								<goals>
									<goal>attach-artifact</goal>
								</goals>
								<configuration>
									<artifacts>
										<artifact>
											<file>${project.build.directory}/${project.artifactId}-${project.version}.zip</file>
											<type>zip</type>
											<classifier></classifier>
										</artifact>
									</artifacts>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo.webstart</groupId>
						<artifactId>webstart-maven-plugin</artifactId>
						<executions>
							<execution>
								<phase>package</phase>
								<goals>
									<goal>jnlp</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<!-- Set to true to exclude all transitive dependencies. Default is false. -->
							<excludeTransitive>false</excludeTransitive>
							<!-- The path where the libraries are stored within the jnlp structure. not required. by default the libraries are within the working directory -->
							<libPath>lib</libPath>
							<jnlp>
								<!--inputTemplateResourcePath>${project.basedir}</inputTemplateResourcePath -->
								<inputTemplate>src/main/jnlp/template.vm</inputTemplate> <!-- relative to inputTemplateResourcePath -->
								<outputFile>scy-lab.jnlp</outputFile> <!-- defaults to launch.jnlp -->
								<!-- used to automatically identify the jar containing the main class. -->
								<mainClass>eu.scy.client.desktop.scylab.Main</mainClass>
							</jnlp>
							<sign>
								<keypass>scylab</keypass>
								<storepass>scylab</storepass>
								<alias>scykeystore</alias>
								<keystore>${project.build.directory}/../scykeystore.jks</keystore>
								<verify>true</verify>
								<keystoreConfig>
									<delete>false</delete>
									<gen>false</gen>
								</keystoreConfig>
							</sign>
							<unsign>true</unsign>
							<!-- BUILDING PROCESS -->
							<pack200>false</pack200>
							<gzip>false</gzip> <!-- default force when pack200 false, true when pack200 selected ?? -->
							<!-- causes a version attribute to be output in each jar resource element, optional, default is false -->
							<outputJarVersions>false</outputJarVersions>
							<verbose>false</verbose>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
