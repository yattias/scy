        </dependency>

        <!-- SCY DEPENDENCIES -->
        <dependency>
            <groupId>eu.scy.common</groupId>
            <artifactId>configuration</artifactId>
            <version>${pom.version}</version>
        </dependency>
        <dependency>
            <groupId>eu.scy.common</groupId>
            <artifactId>action-logging-commons</artifactId>
            <version>${pom.version}</version>
        </dependency>
        <dependency>
            <groupId>eu.scy.common</groupId>
