<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
 
	<parent>
		<artifactId>parent</artifactId>
		<groupId>eu.scy.server</groupId>
		<version>9.8.0-SNAPSHOT</version>
	</parent> 	
 
	<modelVersion>4.0.0</modelVersion>
	<artifactId>collaboration-service-plugin</artifactId>
	<name>collaboration-service-plugin</name>
	<description>Enables adapter that allows xmpp messages used with the collaboration server</description>
	<organization>
		<name>InterMedia, University of Oslo</name>
	</organization>
	<packaging>openfire-plugin</packaging>
	<!--
	<packaging>jar</packaging>
	-->
	<url>http://maven.reucon.com/projects/public/maven-openfire-plugin</url>

	<prerequisites>
		<maven>2.0.1</maven>
	</prerequisites>

	<licenses>
		<license>
			<name>lgpl</name>
		</license>
	</licenses>


	<dependencies>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.14</version>
		</dependency>
		<dependency>
			<groupId>org.igniterealtime.openfire</groupId>
			<artifactId>openfire</artifactId>
			<version>3.6.3</version>
		</dependency>
		<dependency>
			<groupId>eu.scy.common</groupId>
			<artifactId>collaboration-service-impl</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>eu.scy.common</groupId>
			<artifactId>scy-commons</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>info.collide</groupId>
			<artifactId>sqlspaces-client</artifactId>
			<version>3.6.0-SNAPSHOT</version>
		</dependency>
		<!--
			<dependency> <groupId>eu.scy</groupId>
			<artifactId>scy-model-impl</artifactId>
			<version>1.0-SNAPSHOT</version> </dependency>
		-->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.5</version>
		</dependency>
	</dependencies>

	<build>

		<resources>
			<resource>
				<directory>src/main/java</directory>
				<filtering>true</filtering>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.reucon.maven.plugins</groupId>
				<artifactId>maven-openfire-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<jspPackageName>eu.scy.openfire.plugin.ScyOpenFirePlugin.jsp</jspPackageName>
				</configuration>
			</plugin>
		</plugins>

	</build>

</project>
