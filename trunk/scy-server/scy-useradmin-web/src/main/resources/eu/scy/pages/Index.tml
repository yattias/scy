<html t:type="border/layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">

<body>

<div>

    <t:zone id="main_contents">
        This is the zone man!
    </t:zone>


    <t:loop source="currentUser.userRoles" value="userRole">
        ${userRole.role.name}
    </t:loop>

    <t:if test="model">
        PROJECET: ${currentProject.name}

        <t:grid source="groups" row="group">
            <t:parameter name="namecell">
                <t:actionlink t:id="delete" context="group.id" t:zone="main_contents">${group.name}</t:actionlink>
                <!--t:pagelink page="user/view" context="user.id">${user.lastname}</t:pagelink-->
            </t:parameter>
        </t:grid>


    </t:if>
    <t:if test="model" negate="true">
        <h1>Available projects</h1>
        <table>
            <t:loop source="projects" value="scyProject">
                <tr>
                    <td>
                        <a t:type="pageLink" page="Index" context="scyProject.id">${scyProject.name}</a>
                    </td>
                </tr>

            </t:loop>
        </table>
    </t:if>
</div>


</body>
</html>