<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<artifactId>parent</artifactId>
		<groupId>eu.scy.client.tools</groupId>
		<version>9.5.0-SNAPSHOT</version>
	</parent> 	

	<modelVersion>4.0.0</modelVersion>
	<artifactId>scydynamics</artifactId>
   <packaging>jar</packaging>
	<name>SCY dynamics modelling tool</name>
	<description>Modelling Tool for System Dynamics models and for qualitative models, usable standalone and within SCYLab</description>

	<developers>
		<developer>
			<id>lars</id>
			<name>Lars Bollen</name>
			<email>larsbollen@gmail.com</email>
			<url>www.utwente.nl</url>
			<organization>University of Twende</organization>
			<organizationUrl>www.utwente.nl</organizationUrl>
			<roles>
				<role>developer</role>
			</roles>
			<timezone>+1</timezone>
		</developer>
	</developers>
	
	<dependencies>
		<dependency>
			<groupId>nl.utwente</groupId>
			<artifactId>colab.resources</artifactId>
			<version>0.1.0</version>
		</dependency>
		<dependency>
			<groupId>nl.utwente</groupId>
			<artifactId>colab.um</artifactId>
			<version>0.1.0</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
				<inherited>true</inherited>
			</plugin>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>