                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                           <mainClass>eu.scy.tools.dataProcessTool.dataTool.DataProcessToolFrame</mainClass>
                           <!--<mainClass>eu.scy.tools.fitex.MainInterface</mainClass> -->
