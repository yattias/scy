<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
 
	<parent>
		<artifactId>parent</artifactId>
		<groupId>eu.scy.client.tools</groupId>
		<version>9.8.0-SNAPSHOT</version>
	</parent> 	
 
    <modelVersion>4.0.0</modelVersion>
    <artifactId>dataprocesstool</artifactId>
    <packaging>jar</packaging>
    <name>DataProcessTool</name>
 
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                           <mainClass>eu.scy.tools.dataProcessTool.dataTool.DataProcessToolFrame</mainClass>
                           <!--<mainClass>eu.scy.tools.fitex.MainInterface</mainClass> -->
                            <classpathPrefix>lib/</classpathPrefix>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/java/eu/scy/tools/dataProcessTool/utilities</directory>
                <includes>
                    <include>*.properties</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/java/eu/scy/tools/fitex/GUI</directory>
                <includes>
                    <include>*.properties</include>
                </includes>
            </resource>
            <resource>
                 <directory>src/main/resources/Images</directory>
                <includes>
                    <include>*.png</include>
                    <include>*.gif</include>
                </includes>
            </resource>
        </resources>
    </build>
    
    <dependencies>        
        <dependency>
            <groupId>net.java.dev.swing-layout</groupId>
            <artifactId>swing-layout</artifactId>
            <version>1.0.2</version>
        </dependency>
        <dependency>
            <groupId>jdom</groupId>
            <artifactId>jdom</artifactId>
        </dependency>
        <dependency>
            <groupId>com.lowagie</groupId>
            <artifactId>itext</artifactId>
            <version>2.1.4</version>
        </dependency>
        <dependency>
            <groupId>jfree</groupId>
            <artifactId>jfreechart</artifactId>
            <version>1.0.9</version>
        </dependency>
        <dependency>
        	<groupId>eu.scy.common</groupId>
        	<artifactId>scy-commons</artifactId>
        	<version>${pom.version}</version>
        </dependency>      
    </dependencies>
   
</project>
