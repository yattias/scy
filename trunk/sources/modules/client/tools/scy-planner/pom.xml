<?xml version="1.0" encoding="UTF-8"?>
<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>parent</artifactId>
        <groupId>eu.scy.client.tools</groupId>
        <version>9.8.0-SNAPSHOT</version>
    </parent>
    <groupId>eu.scy</groupId>
    <artifactId>scy-planner</artifactId>
    <version>4.0.0-SNAPSHOT</version>
    <name>scy-planner</name>
    <url>http://maven.apache.org</url>
    <dependencies>
        <dependency>
            <groupId>eu.scy.client.tools</groupId>
            <artifactId>scymapper</artifactId>
            <version>9.8.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>eu.scy.common</groupId>
            <artifactId>pedagogical-plan-service-api</artifactId>
            <version>9.8.0-SNAPSHOT</version>
        </dependency>
        
        <dependency>
            <groupId>eu.scy.common</groupId>
            <artifactId>tool-broker-api</artifactId>
            <version>9.8.0-SNAPSHOT</version>
        </dependency>


    </dependencies>

    <repositories>
        <repository>
          <id>maven2-repository.dev.java.net</id>
          <name>Java.net Repository for Maven</name>
          <url>http://download.java.net/maven/2/</url>
          <layout>default</layout>
        </repository>
    </repositories>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <configuration>
                    <mainClass>eu.scy.scyplanner.SCYPlannerMain</mainClass>
                </configuration>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/java</directory>
                <targetPath>*.*</targetPath>
                <includes>
                    <include>*.gif</include>
                    <include>*.png</include>
                    <include>*.svg</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*.*</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>
