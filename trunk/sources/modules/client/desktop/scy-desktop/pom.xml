   <build>
      <resources>
         <resource>
            <directory>src/main/resources</directory>
         </resource>
         <resource>
            <directory>src/main/java</directory>
            <includes>
               <include>**/*.png</include>
               <include>**/*.jpg</include>
               <include>**/*.xml</include>
               <include>**/*.properties</include>
               <include>**/*.fxproperties</include>
               <include>**/*.fxc</include>
               <include>**/*.fxz</include>
               <include>**/*.form</include>
               <include>**/*.css</include>
            </includes>
         </resource>
      </resources>

      <plugins>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <configuration>
               <source>1.6</source>
               <target>1.6</target>
               <optimize>true</optimize>
            </configuration>
         </plugin>
         <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
               <execution>
                  <phase>compile</phase>
                  <configuration>
                     <tasks>
                        <condition else="" property="binary.extension" value=".exe">
                           <os family="windows"/>
                        </condition>
                        <echo>Compiling JavaFX sources with ${binary.extension}</echo>
                        <taskdef classname="com.sun.tools.javafx.ant.JavaFxAntTask" classpathref="maven.compile.classpath" name="javafxc"/>
                        <mkdir dir="target/classes"/>
                        <javafxc debug="true" verbose="false" destdir="target/classes" executable="javafxc${binary.extension}">
                           <src path="src/main/java"/>
                           <classpath refid="maven.compile.classpath"/>
                           <compilerarg value="-J-Xmx512m" />
                        </javafxc>
                     </tasks>
                  </configuration>
                  <goals>
                     <goal>run</goal>
                  </goals>
               </execution>
            </executions>
         </plugin>
      </plugins>
   </build>
