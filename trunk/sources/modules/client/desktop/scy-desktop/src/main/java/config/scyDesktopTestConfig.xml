<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

   <import resource="localRooloConfig.xml"/>
   <!--<import resource="localRooloTemporaryConfig.xml"/>-->
	<!-- <import resource="remoteRooloConfig.xml"/> -->

   <bean name="eloFactory" class="roolo.elo.JDomBasicELOFactory">
      <constructor-arg index="0" ref="metadataTypeManager"/>
   </bean>

   <bean name="scyDesktopConfig" class="eu.scy.client.desktop.scydesktop.config.BasicConfig">
      <property name="repository" ref="repository"/>
      <property name="extensionManager" ref="extensionManager"/>
      <property name="metadataTypeManager" ref="metadataTypeManager"/>
      <property name="eloFactory" ref="eloFactory"/>
      <property name="titleKey" ref="titleKey"/>
      <property name="technicalFormatKey" ref="technicalFormatKey"/>
      <!--
      <property name="missionModelCreator" ref="missionModelCreator"/>
      -->
      <property name="registerContentCreators">
         <list>
            <bean class="eu.scy.client.desktop.scydesktop.test.TestRegisterContentCreators"/>
         </list>
      </property>

      <property name="eloConfigs">
         <list value-type="eu.scy.client.desktop.scydesktop.config.BasicEloConfig">
            <bean class="eu.scy.client.desktop.scydesktop.config.BasicEloConfig">
               <property name="type" value="scy/test"/>
               <property name="display" value="Test elo"/>
               <property name="creatable" value="true"/>
               <property name="contentCreatorId" value="test"/>
               <property name="bottomDrawerCreatorId" value="xmlViewer"/>
            </bean>
            <bean class="eu.scy.client.desktop.scydesktop.config.BasicEloConfig">
               <property name="type" value="scy/tst"/>
               <property name="display" value="Tst elo"/>
               <property name="creatable" value="true"/>
               <property name="contentCreatorId" value="tst"/>
               <property name="bottomDrawerCreatorId" value="xmlViewer"/>
            </bean>
         </list>
      </property>
   </bean>

   <bean  name="missionModelCreator" class="eu.scy.client.desktop.scydesktop.test.TestMissionModelCreator"/>

</beans>
