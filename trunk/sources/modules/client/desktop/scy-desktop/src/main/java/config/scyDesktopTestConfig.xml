<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

   <!--<import resource="localRooloConfig.xml"/>-->
   <import resource="localWrappedRooloConfig.xml"/>
   <!--<import resource="localRooloTemporaryConfig.xml"/>-->
	<!-- <import resource="remoteRooloConfig.xml"/> -->

   <bean name="eloFactory" class="roolo.elo.JDomBasicELOFactory">
      <constructor-arg index="0" ref="metadataTypeManager"/>
   </bean>

   <bean name="scyDesktopConfig" class="eu.scy.client.desktop.scydesktop.config.BasicConfig">
      <property name="repository" ref="repository"/>
      <property name="extensionManager" ref="extensionManager"/>
      <property name="metadataTypeManager" ref="metadataTypeManager"/>
      <property name="eloFactory" ref="eloFactory"/>
      <property name="titleKey" ref="titleKey"/>
      <property name="technicalFormatKey" ref="technicalFormatKey"/>
      <!--
      <property name="missionModelCreator" ref="missionModelCreator"/>
      -->
      <property name="registerContentCreators">
         <list>
            <bean class="eu.scy.client.desktop.scydesktop.test.TestRegisterContentCreators"/>
         </list>
      </property>

      <property name="eloConfigs">
         <list value-type="eu.scy.client.desktop.scydesktop.config.BasicEloConfig">
            <bean class="eu.scy.client.desktop.scydesktop.config.BasicEloConfig">
               <property name="type" value="scy/test"/>
               <property name="display" value="Test elo"/>
               <property name="creatable" value="true"/>
               <property name="contentCreatorId" value="test"/>
               <property name="bottomDrawerCreatorId" value="xmlViewer"/>
            </bean>
            <bean class="eu.scy.client.desktop.scydesktop.config.BasicEloConfig">
               <property name="type" value="scy/tst"/>
               <property name="display" value="Tst elo"/>
               <property name="creatable" value="true"/>
               <property name="contentCreatorId" value="tst"/>
               <property name="bottomDrawerCreatorId" value="xmlViewer"/>
            </bean>
            <bean class="eu.scy.client.desktop.scydesktop.config.BasicEloConfig">
               <property name="type" value="scy/text"/>
               <property name="display" value="Text"/>
               <property name="creatable" value="true"/>
               <property name="contentCreatorId" value="text"/>
               <property name="bottomDrawerCreatorId" value="xmlViewer"/>
            </bean>
            <bean class="eu.scy.client.desktop.scydesktop.config.BasicEloConfig">
               <property name="type" value="scy/ppt"/>
               <property name="display" value="Powerpoint"/>
               <property name="creatable" value="true"/>
               <property name="contentCreatorId" value="ppt"/>
               <property name="bottomDrawerCreatorId" value="xmlViewer"/>
            </bean>
         </list>
      </property>

      <property name="basicMissionAnchorConfigs">
         <list>
            <bean class="eu.scy.client.desktop.scydesktop.config.BasicMissionAnchorConfig">
               <property name="name" value="missionDescription"/>
               <property name="uri" value="roolo://memory/0/0/Mission_description.text"/>
               <property name="xPosition" value="20"/>
               <property name="yPosition" value="20"/>
               <property name="nextMissionAnchorNames">
                  <list>
                     <value>missionBackground</value>
                     <value>missionIntro</value>
                  </list>
               </property>
               <property name="helpEloUris">
                  <list>
                     <value>roolo://memory/2/0/help_elo_1.text</value>
                     <value>roolo://memory/3/0/help_elo_2.text</value>
                  </list>
               </property>
            </bean>
            <bean class="eu.scy.client.desktop.scydesktop.config.BasicMissionAnchorConfig">
               <property name="name" value="missionIntro"/>
               <property name="uri" value="roolo://memory/99/0/Mission_intro.text"/>
               <property name="xPosition" value="60"/>
               <property name="yPosition" value="20"/>
               <property name="nextMissionAnchorNames">
                  <list>
                     <value>missionBackground</value>
                  </list>
               </property>
            </bean>
            <bean class="eu.scy.client.desktop.scydesktop.config.BasicMissionAnchorConfig">
               <property name="name" value="missionBackground"/>
               <property name="uri" value="roolo://memory/1/0/Mission_background.text"/>
               <property name="xPosition" value="40"/>
               <property name="yPosition" value="60"/>
               <property name="nextMissionAnchorNames">
                  <list>
                     <value>missionDescription</value>
                  </list>
               </property>
            </bean>
         </list>
      </property>

      <property name="activeMissionAnchorUri" value="roolo://memory/0/0/Mission_description.text"/>

    <!--  <property name="backgroundImageFileName" value="bckgrnd5b.png"/>
      <property name="backgroundImageFileNameRelative" value="true"/> -->

   </bean>

   <bean  name="missionModelCreator" class="eu.scy.client.desktop.scydesktop.test.TestMissionModelCreator"/>

</beans>
