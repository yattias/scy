	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.1.1</version>
				<executions>
					<execution>
						<goals>
							<goal>java</goal>
						</goals>
						<phase />
					</execution>
				</executions>
				<configuration>
					<mainClass>eu.scy.agents.AgentFramework</mainClass>
					<arguments>
						<!-- fill in here other agents that should be started at debug sessions (without spring) -->
