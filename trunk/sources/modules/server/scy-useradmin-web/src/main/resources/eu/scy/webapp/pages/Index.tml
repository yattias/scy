<html t:type="border/layout" userObject="model"   xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">




<div>

    <t:if test="model">
        <t:grid source="groups" row="group" exclude="id">
            <t:parameter name="namecell">
                <t:actionlink t:id="openGroup" context="openGroupContext">${group.name}</t:actionlink>
            </t:parameter>
        </t:grid>


    </t:if>
    <t:if test="model" negate="true">
        <h1>Available projects</h1>
        <table>
            <t:loop source="projects" value="scyProject">
                <tr>
                    <td>
                        <t:actionLink t:id="openProject" context="scyProject">${scyProject.name}</t:actionLink>
                        <!--a t:type="pageLink" page="Index" context="scyProject">${scyProject.name}</a-->
                    </td>
                </tr>
            </t:loop>
        </table>
    </t:if>

   



</div>

</html>