<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-autowire="byName">

	<alias name="dispatcher" alias="repository" />
	<alias name="localMetadataTypeManager" alias="metadataTypeManager" />
	<alias name="localExtensionManager" alias="extensionManager" />

	<bean id="rooloManager" class="eu.scy.webapp.services.roolo.RooloManager">
		<property name="eloFactory" ref="localEloFactory" />
		<property name="metadataTypeManager" ref="localMetadataTypeManager" />
		<property name="repository" ref="dispatcher" />
	</bean>

	<!--                   Agent Dispatcher                        -->
	<bean name="dispatcher" class="eu.scy.agents.impl.elo.ELOAgentDispatcher">
		<property name="repository" ref="localRepository" />
		<property name="beforeAgents">
			<list>
				<!--  <ref bean="graphConverterAgent" /> -->
				<!--<ref bean="drawAnalyserAgent" />-->
				<!--  <ref bean="obwiousAgent" /> -->
				<!--ref bean="enrichConceptMapAgent" /-->
			</list>
		</property>
		<property name="afterAgents">
			<list>
				<ref bean="conceptMapSavedAgent" />
				<!--ref bean="misspellingNotificationAgent" /-->
				<!--ref bean="notifiyEloBrowserAgent" /-->
			</list>
		</property>
		<property name="notificationAgents">
			<list>
			</list>
		</property>
	</bean>

	<bean name="localRepository" class="roolo.cms.repository.mock.MockRepository">
		<property name="metadataTypeManager" ref="localMetadataTypeManager" />
		<property name="extensionManager" ref="localExtensionManager" />
		<!--property name="eloStoreDirectory" value="eloStore" /-->
		<property name="storeElosInStoreDirectory" value="true" />
	</bean>

	<bean name="localMetadataTypeManager" class="roolo.cms.repository.mock.MockMetadataTypeManager">
		<property name="metadataKeys">
			<list>
				<ref bean="uriKey" />
				<ref bean="titleKey" />
				<ref bean="formatKey" />
				<ref bean="dateCreatedKey" />
				<ref bean="dateLastModifiedKey" />
				<ref bean="missionKey" />
				<ref bean="usesRelationKey" />
				<ref bean="authorKey" />
				<ref bean="annotatesRelationKey" />
				<ref bean="descriptionKey" />

				<ref bean="lineCountKey" />
				<ref bean="rectangleCountKey" />
				<ref bean="ovalCountKey" />
				<ref bean="freehandCountKey" />
				<ref bean="textCountKey" />
				<ref bean="imageCountKey" />
				<ref bean="tagPointerCountKey" />
				<ref bean="nodeLabel" />
				<ref bean="linkLabel" />
				<ref bean="testStringListKey" />
			</list>
		</property>
	</bean>


	<!--  Agents  -->
	<!--bean name="misspellingNotificationAgent"
		class="eu.scy.agents.roolo.elo.misspelling.MisspellingProcessELO">
	</bean-->


	<!--
		<bean name="drawAnalyserAgent"
		class="eu.scy.agents.roolo.elo.drawing.DrawingAnalyserAgent">
		<property name="formatKey" ref="formatKey" /> <property
		name="lineCountKey" ref="lineCountKey" /> <property
		name="rectangleCountKey" ref="rectangleCountKey" /> <property
		name="ovalCountKey" ref="ovalCountKey" /> <property
		name="freehandCountKey" ref="freehandCountKey" /> <property
		name="textCountKey" ref="textCountKey" /> <property
		name="imageCountKey" ref="imageCountKey" /> <property
		name="tagPointerCountKey" ref="tagPointerCountKey" /> </bean>
	-->

