<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>parent</artifactId>
		<groupId>eu.scy.server</groupId>
		<version>9.5.1-SNAPSHOT</version>
	</parent> 
	<modelVersion>4.0.0</modelVersion>
	<groupId>eu.scy</groupId>
	<artifactId>data-synchronizer</artifactId>
	<name>data-synchronizer</name>
	<version>9.5.1-SNAPSHOT</version>
	<description>handles data synchronization</description>
	<organization>
		<name>InterMedia, University of Oslo</name>
	</organization>
	<packaging>jar</packaging>

	<repositories>
		<repository>
			<id>reucon</id>
			<url>http://www.ibiblio.org/maven/public</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>

	<dependencies>

		<dependency>
			<groupId>eu.scy.common</groupId>
			<artifactId>scy-commons</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>info.collide</groupId>
			<artifactId>sqlspaces-client</artifactId>
			<version>3.1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.6</version>
		</dependency>
		<dependency>
			<groupId>jivesoftware</groupId>
			<artifactId>smack</artifactId>
			<version>3.0.4</version>
		</dependency>


	</dependencies>


	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

     <properties>
        <filter.file>src/main/filters/serverfilter.properties</filter.file>
    </properties>

</project>