<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<!DOCTYPE page SYSTEM "chrome://scylighter/locale/scylighter.dtd">
<window id="openELOWindow" title="&openELOWindowTitle;" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
<script src="sidebar.js"/>

    <vbox>
        <!--Filters-->
		<groupbox>
			<caption label="Filter" />
		<!--<label control="" value="Filter"/>-->
        <hbox>
            <label control="filterAuthor" value="Author"/>
            <textbox value="Author/Contributors" text="AuthorLabel" id="filterAuthor"/>
            <label control="filterTitle" value="Title"/>
            <textbox value="Title" text="TitleLabel" id="filterTitle"/>
            <label control="filterDate" value="Date"/>
			<datepicker id="filterDate" type="popup"/>
			<label control="filterKeywords" value="Keywords"/>
            <textbox value="Keywords" text="KeywordsLabel" id="filterKeywords"/>
        </hbox>
		</groupbox>


        <!--Results-->
        <groupbox>
			<caption label="Search-Results" />
			<listbox id="elolist" rows="10">
				<listcols>
					<listcol flex="1" />
					<splitter class="tree-splitter" />
					<listcol flex="1" />
					<splitter class="tree-splitter" />
					<listcol flex="1" />
					<splitter class="tree-splitter" />
					<listcol flex="1" />
				</listcols>
				<listhead>
					<listheader label="Title" />
					<listheader label="Author" />
					<listheader label="Date" />
					<listheader label="URI" />
				</listhead>

			</listbox>
		</groupbox>

        <!--Buttons-->
        <hbox>
			<button label="Search" oncommand="scylighter.retrieveELOList();"/>
			<button label="Preview" oncommand="scylighter.showPreviewELOWindow();"/>
			<button label="Open ELO" oncommand="scylighter.showELOWindow();"/>
        </hbox>
    </vbox>

</window>
