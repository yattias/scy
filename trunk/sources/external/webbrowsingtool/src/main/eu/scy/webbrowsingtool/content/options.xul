<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<!DOCTYPE prefwindow SYSTEM "chrome://scylighter/locale/prefwindow.dtd">
<prefwindow id="scylighterPreferences" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul" title="&prefwindow.title;">
  <prefpane id="pane1" label="&pane1.title;">
    <preferences>
      <preference id="user" name="extensions.scylighter.username" type="string" />
      <preference id="password" name="extensions.scylighter.password" type="string"/>
	  <preference id="address" name="extensions.scylighter.address" type="string"/>
	  <preference id="defaultaddress" name="extensions.scylighter.defaultaddress" type="string"/>
	  <preference id="port" name="extensions.scylighter.port" type="string"/>
	  <preference id="usedefaultaddress" name="extensions.scylighter.usedefaultaddress" type="bool"/>
    </preferences>
	<spacer flex="5"/>
    <groupbox>
      <caption label="&pane1.title;"/>
      <grid>
        <columns>
          <column flex="1"/>
          <column flex="2"/>
        </columns>
        <rows>
          <row>
            <label control="textuser">&user.title;</label>
            <textbox id="textuser" preference="user"/>
          </row>
          <row>
            <label control="textpassword">&password.title;</label>
            <textbox id="textpassword" preference="password" type="password"/>
          </row>
        </rows>
      </grid>
    </groupbox>
	<spacer flex="1"/>
	<groupbox>
      <caption label="&pane2.title;"/>
      <grid>
        <columns>
          <column flex="1"/>
          <column flex="2"/>
        </columns>
        <rows>
          <row>
            <label control="textaddress">&server.addressTitle;</label>
            <textbox id="textaddress" preference="address"/>
          </row>
          <!--<row>
            <label control="textport">&server.portTitle;</label>
            <textbox id="textport" preference="port"/>
          </row>-->
          <row>
			<checkbox id="textusedefaultaddress" preference="usedefaultaddress"/>
            <label control="textusedefaultaddress">&server.usedefaultaddress;</label>
          </row>
        </rows>
      </grid>
	  <!--<dropmarker id="dropmarker"/>
	  <label control="dropmarker">&options.advanced;</label>-->
    </groupbox>
  </prefpane>
</prefwindow>
