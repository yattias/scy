<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionCode="1" android:versionName="1.0"
	package="info.collide.android.scydatacollector">
	<application android:label="@string/app_name"
		android:debuggable="true" android:theme="@android:style/Theme.Light"
		android:icon="@drawable/ic_launcher">
		<activity android:label="@string/app_name" android:name=".DataCollectorActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".DataCollectorFormActivity" />
		<activity android:name=".DataCollectorTakeTextActivity" />
		<activity android:name=".DataCollectorShowImageActivity" />
		<activity android:name=".DataCollectorConfigurationActivity" />
		<activity android:name=".DataCollectorMapViewActivity" />
		<activity android:name=".DataCollectorFormOverviewActivity" />
		<activity android:name=".DataCollectorFormViewDetailsActivity" />
		<activity android:name=".DownloadFormsOverviewActivity" />
		<uses-library android:name="com.google.android.maps" />
