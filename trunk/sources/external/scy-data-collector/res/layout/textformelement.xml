<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent"
	android:orientation="horizontal" android:background="@drawable/gradient"
	android:paddingRight="3dp">
	<TextView android:id="@+id/textformelement_label" android:paddingLeft="3dp"
		android:layout_gravity="left|center_vertical" android:text="Text"
		android:layout_height="wrap_content" android:layout_width="wrap_content" />
	<ImageButton android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:src="@drawable/text"
		android:id="@+id/textformelement_write_text" android:layout_gravity="center_vertical"></ImageButton>
	<TextView android:id="@+id/textformelement_preview_text" android:layout_height="wrap_content"
		android:ellipsize="start" android:maxLines="2"
		android:layout_width="wrap_content" android:layout_weight="2"
		android:layout_gravity="center_vertical" android:gravity="center"></TextView>
	<ImageButton android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:src="@drawable/ic_menu_info_details"
		android:id="@+id/textformelement_show_details" android:layout_gravity="center_vertical"></ImageButton>
</LinearLayout>
