<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent"
	android:orientation="horizontal" android:background="@drawable/gradient"
	android:paddingRight="3dp" android:paddingTop="3dp">
	<TextView android:id="@+id/voiceformelement_label" android:paddingLeft="3dp"
		android:layout_gravity="left|center_vertical" android:text="Text"
		android:layout_height="wrap_content" android:layout_width="wrap_content" />
	<ImageButton android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:src="@drawable/ic_btn_speak_now"
		android:id="@+id/voiceformelement_record" android:layout_gravity="center_vertical"></ImageButton>
	<ImageButton android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:src="@drawable/media_controls_dark_stop"
		android:id="@+id/voiceformelement_stop" android:layout_gravity="center_vertical"></ImageButton>
	<ImageButton android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:src="@drawable/media_controls_dark_play"
		android:id="@+id/voiceformelement_play" android:layout_gravity="center_vertical"></ImageButton>
	<ImageButton android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:src="@drawable/ic_menu_info_details"
		android:id="@+id/voiceformelement_details" android:layout_gravity="center_vertical"></ImageButton>
</LinearLayout>