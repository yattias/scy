        <mapping class="eu.scy.core.model.impl.SCYProjectImplmpl"/>
        <mapping class="eu.scy.core.model.impl.RoleImpl"/>
        <mapping class="eu.scy.core.model.impl.UserRoleImpl"/>
        <mapping class="eu.scy.core.model.impl.BuddyConnectionImpl"/>
        <mapping class="eu.scy.core.model.impl.UserSessionImpl"/>
