<?xml version="1.0" encoding="ISO-8859-1"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://maven.apache.org/POM/4.0.0">
    <modelVersion>4.0.0</modelVersion>

    <groupId>eu.scy</groupId>
    <artifactId>tool-broker-mobile-demoapp</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>tool-broker-mobile-demoapp</name>

 	<organization>
 		<name>SCY</name>
	</organization>
    <properties>
        <wtkHome>${j2me.sdkPath}</wtkHome>
        <j2me.midlet.vendor>${project.organization.name}</j2me.midlet.vendor>
        <j2me.midlet.name>${project.name}</j2me.midlet.name>
        <j2me.midlet.version>1.0-SNAPSHOT</j2me.midlet.version>
        <j2me.midlet.configuration>CLDC-1.0</j2me.midlet.configuration>
        <j2me.midlet.profile>MIDP-2.0</j2me.midlet.profile>
    </properties>
    <dependencies>
        <dependency>
            <groupId>javax.microedition</groupId>
            <artifactId>xmlrpc</artifactId>
            <scope>system</scope>
            <version>1.0</version>
            <classifier>jar</classifier>
            <systemPath>${wtkHome}/lib/j2me-xmlrpc.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>javax.microedition</groupId>
            <artifactId>ws</artifactId>
            <scope>system</scope>
            <version>1.0</version>
            <classifier>jar</classifier>
            <systemPath>${wtkHome}/lib/j2me-ws.jar</systemPath>
        </dependency>
    </dependencies>

    <pluginRepositories>
        <pluginRepository>
            <id>pyx4me-maven-plugin</id>
            <url>http://pyx4me.com/maven2-release/com/pyx4me/pyx4me-maven-plugins/</url>
        </pluginRepository>
    </pluginRepositories>
    <build>
        <defaultGoal>install</defaultGoal>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.3</source>
                    <target>1.3</target>
                    <compilerArguments>
                        <bootclasspath>${wtkHome}/lib/cldcapi10.jar${path.separator}${wtkHome}/lib/midpapi20.jar${path.separator}${wtkHome}/lib/j2me-xmlrpc.jar${path.separator}${wtkHome}/lib/mmapi.jar</bootclasspath>
                    </compilerArguments>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.pyx4me</groupId>
                <artifactId>j2me-maven-plugin</artifactId>
                <version>2.0.3</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>package</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <wtkHome>${wtkHome}</wtkHome>
                    <preprocess>false</preprocess>
                    <proguard>false</proguard>
                    <useWtkLibs>false</useWtkLibs>
                    <libs>
                        <lib>${wtkHome}/lib/cldcapi10.jar</lib>
                        <lib>${wtkHome}/lib/midpapi20.jar</lib>
                    </libs>
                    <midlets>
                        <MIDlet>
                            <name>SCYMobile</name>
                            <icon>/scy.png</icon>
                            <class>eu.scy.mobile.toolbroker.demo.SCYMobileDemo</class>
                        </MIDlet>
                    </midlets>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>