<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/mainview">




	<Button android:id="@+id/upload" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:padding="10px"
		android:text="Upload ELO" android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true">
	</Button>
	

<TextView android:layout_height="wrap_content" android:layout_toRightOf="@+id/logo" android:id="@+id/header" android:textStyle="bold" android:layout_width="fill_parent" android:text="Take a photo and upload it to RoOLO!" android:textSize="17sp"></TextView>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/titleTextView"
		android:text="Title:" android:textSize="22sp"
		android:layout_alignBaseline="@+id/title"></TextView>
	<Button android:layout_height="wrap_content" android:text="Take Photo"
		android:layout_width="fill_parent" android:padding="10px" android:id="@+id/takePhoto"
		android:layout_above="@+id/upload"></Button>
	<EditText android:id="@+id/title" android:layout_toRightOf="@+id/titleTextView"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:padding="10px" android:layout_above="@+id/takePhoto"
		android:lines="1"></EditText>

	<ImageView android:id="@+id/preview" android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:layout_above="@+id/title"
		android:layout_below="@+id/header" android:padding="10px"></ImageView>
</RelativeLayout>
