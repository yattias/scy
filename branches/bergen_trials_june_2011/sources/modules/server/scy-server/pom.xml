
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>parent</artifactId>
        <groupId>eu.scy.server</groupId>
        <version>34-SNAPSHOT</version>
    </parent>
    <groupId>eu.scy.server</groupId>
    <artifactId>scy-server</artifactId>
    <packaging>pom</packaging>
    <name>SCY Server Bundle</name>
    <dependencies>
        <dependency>
			<!-- javassist necessary for embedded jetty run -->
            <groupId>javassist</groupId>
            <artifactId>javassist</artifactId>
            <version>3.9.0.GA</version>
        </dependency>
        <dependency>
            <groupId>eu.scy</groupId>
            <artifactId>roolo-ws</artifactId>
            <version>${pom.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>eu.scy.server</groupId>
            <artifactId>server-external-components</artifactId>
            <version>${pom.version}${version-name}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>info.collide</groupId>
            <artifactId>sqlspaces-server-web</artifactId>
            <version>${sqlspaces-version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>net.sf.sail</groupId>
            <artifactId>webapp</artifactId>
            <version>0.2.0-SNAPSHOT${version-name}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>org.roolo</groupId>
            <artifactId>search-impl</artifactId>
        </dependency>
    </dependencies>
    <profiles>
        <profile>
            <id>embedded</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.cargo</groupId>
                        <artifactId>cargo-maven2-plugin</artifactId>
                        <configuration>
                            <container>
                                <containerId>jetty6x</containerId>
                                <type>embedded</type>
                                <dependencies>
                                    <dependency>
                                        <groupId>javassist</groupId>
                                        <artifactId>javassist</artifactId>
                                    </dependency>
                                </dependencies>
                            </container>
                            <configuration>
                                <deployables>
                                    <deployable>
                                        <groupId>eu.scy.server</groupId>
                                        <artifactId>server-external-components</artifactId>
                                        <properties>
                                            <context>/extcomp</context>
                                        </properties>
                                        <type>war</type>
                                    </deployable>
                                    <deployable>
                                        <groupId>info.collide</groupId>
                                        <artifactId>sqlspaces-server-web</artifactId>
                                        <properties>
                                            <context>/investigator</context>
                                        </properties>
                                        <type>war</type>
                                    </deployable>
                                    <deployable>
                                        <groupId>net.sf.sail</groupId>
                                        <artifactId>webapp</artifactId>
                                        <properties>
                                            <context>/webapp</context>
                                        </properties>
                                        <type>war</type>
                                    </deployable>
                                    <deployable>
                                        <groupId>eu.scy</groupId>
                                        <artifactId>roolo-ws</artifactId>
                                        <properties>
                                            <context>/roolo-ws</context>
                                        </properties>
                                        <type>war</type>
                                    </deployable>
                                </deployables>
                            </configuration>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>tomcat</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.cargo</groupId>
                        <artifactId>cargo-maven2-plugin</artifactId>
                        <configuration>
                            <container>
                                <containerId>tomcat6x</containerId>
                                <type>remote</type>
                            </container>
                            <configuration>
                                <type>runtime</type>
                                <properties>
                                    <cargo.remote.username>${deploy.username}</cargo.remote.username>
                                    <cargo.remote.password>${deploy.password}</cargo.remote.password>
                                    <cargo.hostname>${deploy.hostname}</cargo.hostname>
                                    <cargo.servlet.port>${deploy.port}</cargo.servlet.port>
                                </properties>
                            </configuration>
                            <deployer>
                                <type>remote</type>
                                <deployables>
                                    <deployable>
                                        <groupId>eu.scy.server</groupId>
                                        <artifactId>server-external-components</artifactId>
                                        <properties>
                                            <context>/extcomp</context>
                                        </properties>
                                        <type>war</type>
                                    </deployable>
                                    <deployable>
                                        <groupId>info.collide</groupId>
                                        <artifactId>sqlspaces-server-web</artifactId>
                                        <properties>
                                            <context>/investigator</context>
                                        </properties>
                                        <type>war</type>
                                    </deployable>
                                    <deployable>
                                        <groupId>net.sf.sail</groupId>
                                        <artifactId>webapp</artifactId>
                                        <properties>
                                            <context>/webapp</context>
                                        </properties>
                                        <type>war</type>
                                    </deployable>
                                    <deployable>
                                        <groupId>eu.scy</groupId>
                                        <artifactId>roolo-ws</artifactId>
                                        <properties>
                                            <context>/roolo-ws</context>
                                        </properties>
                                        <type>war</type>
                                    </deployable>
                                </deployables>
                            </deployer>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>default</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <version-name></version-name>
            </properties>
        </profile>
        <profile>
            <id>UDE-Review</id>
            <properties>
                <version-name>-review</version-name>
            </properties>
        </profile>
        <profile>
            <id>UT</id>
            <properties>
                <version-name>-ut</version-name>
            </properties>
        </profile>
        <profile>
            <id>UT2</id>
            <properties>
                <version-name>-ut2</version-name>
            </properties>
        </profile>
    </profiles>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>eu.scy.common</groupId>
                <artifactId>configuration</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
</project>
