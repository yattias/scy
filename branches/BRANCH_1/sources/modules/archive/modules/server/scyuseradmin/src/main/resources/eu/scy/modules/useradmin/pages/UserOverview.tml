<html t:type="border/layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
<head>
    <title>User overvieww</title>
</head>
<body>


<t:if test="currentProject">
    <table style="width:100%;">
        <tr>
            <td style="width:20%;vertical-align:top;">
                <div t:type="grouplist/GroupList"/>
               
            </td>
            <td style="width:80%;vertical-align:top;">
                <t:beaneditform t:id="currentGroup" submitlabel="message:SAVE"/>

                <h1>Users in ${currentlySelectedGroupName}:</h1>
                <t:grid source="users" row="user" style="width:100%;">
                    <t:parameter name="lastnamecell">
                        <t:pagelink page="start" context="user.username">${user.lastname}</t:pagelink>
                    </t:parameter>
                </t:grid>

                <t:if test="currentGroup">
                    <t:PageLink page="Start">Add new user</t:PageLink>
                </t:if>
            </td>
        </tr>
    </table>
    <t:parameter name="else">
        No project selected - select one first!
    </t:parameter>
</t:if>
</body>
</html>
