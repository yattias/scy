<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
    <h1>Groups</h1>
    <t:grid source="groups" row="group" add="userCount" style="width:100%;">
        <t:parameter name="namecell">
            <t:actionLink t:id="selectGroup" context="group.id">${group.name}</t:actionLink>
        </t:parameter>
        <t:parameter name="userCountcell">
            ${userCount}
        </t:parameter>                        
    </t:grid>

    <t:actionlink t:id="AddGroup">Add group</t:actionlink>
</html>