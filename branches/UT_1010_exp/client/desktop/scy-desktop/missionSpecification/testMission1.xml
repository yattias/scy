<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


   <bean name="missionConfigInput" class="eu.scy.client.desktop.scydesktop.tools.mission.springimport.BasicMissionConfigInput">

      <property name="eloToolConfigs">
         <list value-type="eu.scy.common.mission.EloToolConfig">
            <bean class="eu.scy.common.mission.impl.BasicEloToolConfig">
               <property name="eloType" value="scy/test"/>
               <property name="contentCreatorId" value="test"/>
               <property name="topDrawerCreatorId" value="xmlViewer"/>
               <property name="rightDrawerCreatorId" value="propertiesViewer"/>
            </bean>
            <bean class="eu.scy.common.mission.impl.BasicEloToolConfig">
               <property name="eloType" value="scy/tst"/>
               <property name="contentCreatorId" value="tst"/>
               <property name="topDrawerCreatorId" value="xmlViewer"/>
               <property name="rightDrawerCreatorId" value="propertiesViewer"/>
            </bean>
            <bean class="eu.scy.common.mission.impl.BasicEloToolConfig">
               <property name="eloType" value="scy/scytoolviewer"/>
               <property name="contentCreatorId" value="scyToolViewer"/>
               <property name="topDrawerCreatorId" value="xmlViewer"/>
               <property name="leftDrawerCreatorId" value="scyToolViewer"/>
               <property name="rightDrawerCreatorId" value="propertiesViewer"/>
            </bean>
            <bean class="eu.scy.common.mission.impl.BasicEloToolConfig">
               <property name="eloType" value="scy/text"/>
               <property name="contentCreatorId" value="text"/>
               <property name="topDrawerCreatorId" value="xmlViewer"/>
               <property name="leftDrawerCreatorId" value="scyToolViewer"/>
               <property name="bottomDrawerCreatorId" value="xmlViewer"/>
               <property name="rightDrawerCreatorId" value="propertiesViewer"/>
               <property name="eloLogicalRoleValues">
                  <list>
                     <value>structured_Text</value>
                     <value>rich_Text</value>
                     <value>presentation</value>
                  </list>
               </property>
               <property name="eloFunctionalRoleValues">
                  <list>
                     <value>hypothesis</value>
                     <value>document_Design</value>
                     <value>report_Evaluation</value>
                     <value>report_Final</value>
                  </list>
               </property>
            </bean>
            <bean class="eu.scy.common.mission.impl.BasicEloToolConfig">
               <property name="eloType" value="scy/ppt"/>
               <property name="contentCreatorId" value="presentationUpload"/>
               <property name="topDrawerCreatorId" value="xmlViewer"/>
               <property name="rightDrawerCreatorId" value="propertiesViewer"/>
            </bean>
            <bean class="eu.scy.common.mission.impl.BasicEloToolConfig">
               <property name="eloType" value="scy/image"/>
               <property name="eloSystemRole" value="USER"/>
               <property name="contentCreatorId" value="image"/>
               <property name="topDrawerCreatorId" value="xmlViewer"/>
               <property name="rightDrawerCreatorId" value="propertiesViewer"/>
            </bean>
            <bean class="eu.scy.common.mission.impl.BasicEloToolConfig">
               <property name="eloType" value="scy/speedTest"/>
               <property name="eloSystemRole" value="SYSTEM"/>
               <property name="contentCreatorId" value="speedTestPanel"/>
               <property name="topDrawerCreatorId" value="xmlViewer"/>
               <property name="rightDrawerCreatorId" value="propertiesViewer"/>
            </bean>
            <bean class="eu.scy.common.mission.impl.BasicEloToolConfig">
               <property name="eloType" value="scy/missionspecification"/>
               <property name="eloSystemRole" value="SYSTEM"/>
               <property name="contentCreatorId" value="missionSpecification"/>
               <property name="bottomDrawerCreatorId" value="xmlViewer"/>
               <property name="leftDrawerCreatorId" value="scyToolViewer"/>
            </bean>
            <bean class="eu.scy.common.mission.impl.BasicEloToolConfig">
               <property name="eloType" value="scy/missionmapmodel"/>
               <property name="eloSystemRole" value="SYSTEM"/>
               <property name="contentCreatorId" value="missionMapModel"/>
               <property name="bottomDrawerCreatorId" value="xmlViewer"/>
               <property name="leftDrawerCreatorId" value="scyToolViewer"/>
            </bean>
            <bean class="eu.scy.common.mission.impl.BasicEloToolConfig">
               <property name="eloType" value="scy/elotoolconfiguration"/>
               <property name="eloSystemRole" value="SYSTEM"/>
               <property name="contentCreatorId" value="eloToolConfiguration"/>
               <property name="bottomDrawerCreatorId" value="xmlViewer"/>
               <property name="leftDrawerCreatorId" value="scyToolViewer"/>
            </bean>
            <bean class="eu.scy.common.mission.impl.BasicEloToolConfig">
               <property name="eloType" value="scy/missionruntime"/>
               <property name="eloSystemRole" value="SYSTEM"/>
               <property name="contentCreatorId" value="missionRuntime"/>
               <property name="bottomDrawerCreatorId" value="xmlViewer"/>
               <property name="leftDrawerCreatorId" value="scyToolViewer"/>
            </bean>
            <bean class="eu.scy.common.mission.impl.BasicEloToolConfig">
               <property name="eloType" value="scy/templateelos"/>
               <property name="eloSystemRole" value="SYSTEM"/>
               <property name="contentCreatorId" value="templateElos"/>
               <property name="bottomDrawerCreatorId" value="xmlViewer"/>
               <property name="leftDrawerCreatorId" value="scyToolViewer"/>
            </bean>
            <bean class="eu.scy.common.mission.impl.BasicEloToolConfig">
               <property name="eloType" value="scy/runtimesettings"/>
               <property name="eloSystemRole" value="SYSTEM"/>
               <property name="contentCreatorId" value="runtimeSettings"/>
               <property name="bottomDrawerCreatorId" value="xmlViewer"/>
               <property name="leftDrawerCreatorId" value="scyToolViewer"/>
            </bean>
         </list>
      </property>

      <property name="basicMissionMap">
         <bean class="eu.scy.client.desktop.scydesktop.config.BasicMissionMap">
            <property name="id" value="testMap"/>
            <property name="name" value="test mission"/>
            <property name="loEloUris">
               <list>
                  <value>roolo://memory/2/0/help_elo_1.text</value>
                  <!--
                  <value>roolo://memory/3/0/help_elo_2.text</value>
                  -->
               </list>
            </property>
            <property name="lasses">
               <list>
                  <bean class="eu.scy.client.desktop.scydesktop.config.BasicLas">
                     <property name="id" value="las1"/>
                     <property name="xPosition" value="0"/>
                     <property name="yPosition" value="0"/>
                     <property name="tooltip" value="A great small las top left"/>
                     <property name="loEloUris">
                        <list>
                           <value>roolo://memory/2/0/help_elo_1.text</value>
                           <!--
                           <value>roolo://memory/3/0/help_elo_2.text</value>
                           -->
                        </list>
                     </property>
                     <property name="nextLasses">
                        <list>
                           <value>las2</value>
                           <value>las3</value>
                        </list>
                     </property>
                     <property name="anchorEloId" value="missionDescription"/>
                     <property name="intermediateEloIds">
                        <list>
                           <value>testIntermediate1</value>
                        </list>
                     </property>
                  </bean>
                  <bean class="eu.scy.client.desktop.scydesktop.config.BasicLas">
                     <property name="id" value="las2"/>
                     <property name="xPosition" value="20"/>
                     <property name="yPosition" value="40"/>
                     <property name="tooltip" value="A great small las at the bottom"/>
                     <property name="nextLasses">
                        <list>
                           <value>las1</value>
                           <value>las3</value>
                        </list>
                     </property>
                     <property name="anchorEloId" value="missionIntro"/>
                  </bean>
                  <bean class="eu.scy.client.desktop.scydesktop.config.BasicLas">
                     <property name="id" value="las3"/>
                     <property name="xPosition" value="40"/>
                     <property name="yPosition" value="0"/>
                     <property name="tooltip" value="A great small las to right"/>
                     <property name="nextLasses">
                        <list>
                        </list>
                     </property>
                     <property name="anchorEloId" value="missionBackground"/>
                  </bean>
               </list>
            </property>
            <property name="initialLasId" value="las1"/>
         </bean>
      </property>

      <property name="basicMissionAnchors">
         <list>
            <bean class="eu.scy.client.desktop.scydesktop.config.BasicMissionAnchor">
               <property name="id" value="missionDescription"/>
               <property name="uri" value="roolo://memory/0/0/Mission_description.text"/>
               <property name="iconType" value="scy/drawing"/>
               <property name="inputMissionAnchorIds">
                  <list>
                     <value>missionBackground</value>
                     <value>missionIntro</value>
                  </list>
               </property>
               <property name="loEloUris">
                  <list>
                     <value>roolo://memory/2/0/help_elo_1.text</value>
                  </list>
               </property>
            </bean>
            <bean class="eu.scy.client.desktop.scydesktop.config.BasicMissionAnchor">
               <property name="id" value="missionIntro"/>
               <property name="uri" value="roolo://memory/99/0/Mission_intro.text"/>
               <property name="inputMissionAnchorIds">
                  <list>
                     <value>missionBackground</value>
                  </list>
               </property>
            </bean>
            <bean class="eu.scy.client.desktop.scydesktop.config.BasicMissionAnchor">
               <property name="id" value="missionBackground"/>
               <property name="uri" value="roolo://memory/1/0/Mission_background.text"/>
               <property name="inputMissionAnchorIds">
                  <list>
                     <value>missionDescription</value>
                  </list>
               </property>
            </bean>
            <bean class="eu.scy.client.desktop.scydesktop.config.BasicMissionAnchor">
               <property name="id" value="testIntermediate1"/>
               <property name="uri" value="roolo://memory/3/0/help_elo_2.text"/>
               <property name="inputMissionAnchorIds">
                  <list>
                  </list>
               </property>
            </bean>
         </list>
      </property>

<!--
      <property name="activeMissionAnchorUri" value="roolo://memory/0/0/Mission_description.text"/>
-->
      <property name="templateEloUris">
         <list>
            <value>roolo://memory/0/0/Mission_description.text</value>
            <value>roolo://memory/1/0/Mission_background.text</value>
            <value>roolo://memory/2/0/help_elo_1.text</value>
            <value>roolo://memory/3/0/help_elo_2.text</value>
            <value>roolo://memory/99/0/help_elo_2.text</value>
            <value>roolo://memory/3/0/help_elo_2.text</value>
            <value>roolo://memory/99/0/help_elo_2.text</value>
         </list>
      </property>

