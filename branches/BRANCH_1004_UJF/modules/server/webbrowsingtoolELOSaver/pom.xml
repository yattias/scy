        <groupId>eu.scy.server</groupId>
        <version>9.8.0-UJF-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>eu.scy</groupId>
    <artifactId>roolo-ws</artifactId>
    <name>RoOLO-SCY-Webservice</name>
    <url>http://www.intermedia.uio.no/display/SCY/Webbrowsing+Tool</url>

    <developers>
        <developer>
            <id>svenm</id>
            <name>Sven Manske</name>
            <email>manske@collide.info</email>
            <url>http://www.collide.info</url>
            <organization>Collide @ Uni Duisburg-Essen</organization>
            <organizationUrl>http://www.collide.info</organizationUrl>
            <timezone>+1</timezone>
            <roles>
                <role>developer</role>
            </roles>
            <properties>
                <skype>sven.manske</skype>
            </properties>
        </developer>
    </developers>


    <packaging>war</packaging>

    <profiles>
        <profile>
            <id>jdk-1.6</id>
            <activation>
                <jdk>1.6</jdk>
            </activation>
            <dependencies>
                <dependency> <!-- depend on JAXB to enable WADL support -->
                    <groupId>com.sun.xml.bind</groupId>
                    <artifactId>jaxb-impl</artifactId>
                    <version>2.1.12</version>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

    <build>
        <finalName>scy-roolo-ws</finalName>
        <plugins>
            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>maven-jetty-plugin</artifactId>
                <version>6.1H.14.1</version>
                <configuration>
                    <connectors>
                        <connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
                            <port>33605</port>
                        </connector>
                    </connectors>
                    <contextPath>roolo-ws</contextPath>
                    <stopKey>h</stopKey>
                    <stopPort>33606</stopPort>
                    <scanIntervalSeconds>5</scanIntervalSeconds>
                    <requestLog implementation="org.mortbay.jetty.NCSARequestLog">
                        <filename>target/yyyy_mm_dd.request.log</filename>
                        <retainDays>5</retainDays>
                        <append>true</append>
                        <extended>false</extended>
                        <logTimeZone>GMT+1</logTimeZone>
                    </requestLog>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <inherited>true</inherited>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
