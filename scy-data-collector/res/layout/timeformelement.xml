<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent"
	android:orientation="horizontal" android:background="@drawable/gradient"
	android:paddingRight="3dp" android:paddingTop="3dp">
	<TextView android:id="@+id/timeformelement_label" android:paddingLeft="3dp"
		android:layout_gravity="left|center_vertical" android:text="Time"
		android:layout_height="wrap_content" android:layout_width="wrap_content" />
	<ImageButton android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:src="@drawable/ic_dialog_time"
		android:id="@+id/timeformelement_capture_time"
		android:layout_gravity="center_vertical"></ImageButton>
	<TextView android:id="@+id/timeformelement_time"
		android:layout_gravity="center_vertical" android:text=""
		android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="2"
		android:gravity="center" />
	<ImageButton android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:src="@drawable/ic_menu_info_details"
		android:id="@+id/timeformelement_show_details" android:layout_gravity="center_vertical"></ImageButton>
</LinearLayout>
