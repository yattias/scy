<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent"
	android:orientation="horizontal" android:background="@drawable/gradient" android:paddingRight="3dp"
	android:paddingTop="3dp">
	<TextView android:id="@+id/counterformelement_label" android:paddingLeft="3dp" 
		android:layout_gravity="center_vertical" android:text="Counter"
		android:layout_height="wrap_content" android:layout_width="wrap_content" />
	<EditText android:text="0" android:id="@+id/counterformelement_counter_field"
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:layout_weight="2"></EditText>
	<ImageButton android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:src="@drawable/add"
		android:id="@+id/counterformelement_increase" android:layout_gravity="center_vertical"></ImageButton>
	<ImageButton android:layout_width="wrap_content"
		android:src="@drawable/remove_minus_sign" android:layout_height="fill_parent"
		android:id="@+id/counterformelement_decrease" android:layout_gravity="center_vertical"></ImageButton>
	<ImageButton android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:src="@drawable/ic_menu_info_details"
		android:id="@+id/counterformelement_show_details"
		android:layout_gravity="center_vertical"></ImageButton>
</LinearLayout>
