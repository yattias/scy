<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">

<Configure class="org.mortbay.jetty.webapp.WebAppContext">

    
    <New id="DSTest" class="org.mortbay.jetty.plus.naming.Resource">
        <Arg>jdbc/scyuseradmin</Arg>
        <Arg>
            <New class="com.mysql.jdbc.jdbc2.optional.MysqlConnectionPoolDataSource">
                <Set name="Url">jdbc:mysql://localhost:3306/scyuseradmin</Set>
                <Set name="User">${db.user_name}</Set>
                <Set name="Password">${db.password}</Set> <!-- WELL - WELL - when I have the time I will make this one to be locally configurable -->
            </New>
        </Arg>
    </New>


</Configure>

