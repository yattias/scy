<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="userManagementEndpoint" class="eu.scy.modules.useradmin.webservice.UserManagementEndpoint">
        <property name="userManagementService">
            <ref bean="userManagementService"/>
        </property>
    </bean>

    <bean id="userManagementService" class="eu.scy.modules.useradmin.webservice.impl.UserManagementServiceImpl">
        <property name="dao" ref="userDAO"/>
    </bean>

    <bean class="org.springframework.ws.server.endpoint.mapping.PayloadRootQNameEndpointMapping">
        <property name="mappings">
            <props>
                <prop key="{http://www.scy-net.eu/schemas}LoginRequest">userManagementEndpoint</prop>
            </props>
        </property>
        <property name="interceptors">
            <bean class="org.springframework.ws.server.endpoint.interceptor.PayloadLoggingInterceptor"/>
        </property>
    </bean>

    <bean id="userManagement" class="org.springframework.ws.wsdl.wsdl11.DynamicWsdl11Definition">
        <property name="builder">
            <bean class="org.springframework.ws.wsdl.wsdl11.builder.XsdBasedSoap11Wsdl4jDefinitionBuilder">
                <property name="schema" value="/WEB-INF/um.xsd"/>
                <property name="portTypeName" value="UserManagement"/>
                <property name="locationUri" value="http://localhost:8080/scyadmin/ws"/>
            </bean>
        </property>
    </bean>

</beans>