<Context path="" docBase="scyadmin" debug="99" reloadable="false">
	<Valve className="org.apache.catalina.valves.AccessLogValve" prefix="bite_access" suffix=".log" resolveHosts="true" pattern="%h %u %t %T &quot;%r&quot; %s %b"/>
	<Resource name="jdbc/scyuseradmin" auth="Container" type="javax.sql.DataSource"
		factory="org.apache.commons.dbcp.BasicDataSourceFactory"
		initialSize="5"
		maxActive="75"
		maxIdle="50"
		minIdle="5"
		maxWait="30000"
		username="${db.user_name}" password="${db.password}"
        driverClassName="com.mysql.jdbc.Driver"
		defaultAutoCommit="false"
		url="jdbc:mysql://${db.host}/scyuseradmin?autoReconnect=true&amp;characterEncoding=UTF-8&amp;zeroDateTimeBehavior=round"
		removeAbandoned="true"
		removeAbandonedTimeout="150"
		defaultTransactionIsolation="READ_COMMITTED"
		validationQuery="SELECT 1"
		testWhileIdle="true"
		timeBetweenEvictionRunsMillis="10000"
		minEvictableIdleTimeMillis="60000"
		logAbandoned="true"/>
</Context>
