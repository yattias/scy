<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
<head>
    <title>SCY</title>
    <link href="${asset:context:css/scylayout.css}" rel="stylesheet" type="text/css"/>
</head>

<div id="scyPage">
    <div id="scyPageInnerContainer">
        <div id="scyTopContainer">
            <div id="scyTopRightPlaceHolder">
                <div id="scyTopInnerContainer">

                    Currently logged in as: ${currentUsersUserName} - ${currentProjectName}



                </div>

            </div>
        </div>


        <div id="mainpane">
            <div id="mainpane_inner">
                <div id="scyUserMenu">
                     <t:pagelink page="Index" title="Index">
                         <img src="${scyHomeIcon}"/>
                     </t:pagelink>
                     <t:if test="currentProject">
                         <t:pagelink page="GroupOverview" title="User administration">
                             <img src="${scyUserAdminIcon}"/>
                         </t:pagelink>
                     </t:if>
                    <t:loop source="actions" value="baseAction">
                        <t:actionlink t:id="actionMenuItem" t:context="list: userObject, baseAction.actionid">  ${baseAction.name}</t:actionlink> 
                    </t:loop>
            

                     <t:actionlink t:id="logout">Log out</t:actionlink>
                </div>
                 <div>
                    <div t:type="breadcrumbs/BreadCrumbs"/>
                </div>
                <t:body/>
            </div>
        </div>

    </div>
</div>


<!--/body-->
</html>