<html t:type="border/layout" userObject="model"   xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">




<div>

   <!--div t:type="colemo/Colemo"/-->

    <t:if test="model">
        <t:grid source="groups" row="group" exclude="id">
            <t:parameter name="namecell">
                <t:actionlink t:id="openGroup" context="group.id" t:zone="main_contents">${group.name}</t:actionlink>
            </t:parameter>
        </t:grid>


    </t:if>
    <t:if test="model" negate="true">
        <h1>Available projects</h1>
        <table>
            <t:loop source="projects" value="scyProject">
                <tr>
                    <td>
                        <a t:type="pageLink" page="Index" context="scyProject.id">${scyProject.name}</a>
                    </td>
                </tr>
            </t:loop>
        </table>
    </t:if>




</div>

</html>